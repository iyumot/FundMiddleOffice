                    </Style>
                </DockPanel.Resources>
                <ToggleButton Content="每年" IsChecked="{Binding YearFlag}" />
                <ToggleButton Content="每季" IsChecked="{Binding QuarterFlag}" />
                <ToggleButton Content="每月" IsChecked="{Binding MonthFlag}" />
