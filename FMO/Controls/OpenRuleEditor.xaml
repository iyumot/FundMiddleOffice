                <ToggleButton Content="每天" IsChecked="{Binding DayFlag}" />
            </DockPanel>-->

            <ListBox ItemContainerStyle="{StaticResource ListBoxItem.AllaysFocus}" ItemsPanel="{StaticResource WrapHorizontalItemsPanelTemplate}">
                <ListBoxItem Content="每年" IsSelected="{Binding YearFlag}" />
                <ListBoxItem Content="每季" IsSelected="{Binding QuarterFlag}" />
                <ListBoxItem Content="每月" IsSelected="{Binding MonthFlag}" />
                <ListBoxItem Content="每周" IsSelected="{Binding WeekFlag}" />
                <ListBoxItem Content="每天" IsSelected="{Binding DayFlag}" />
            </ListBox>

            <DockPanel LastChildFill="False" Visibility="{Binding ShowQuarterList, Converter={StaticResource Boolean2VisibilityConverter}}">
                <ListBox ItemsSource="{Binding Quarters}" Style="{StaticResource ListBox.Simple}" />
            </DockPanel>


            <DockPanel LastChildFill="False" Visibility="{Binding ShowMonthList, Converter={StaticResource Boolean2VisibilityConverter}}">
                <ListBox ItemsSource="{Binding MonthSource.View}" Style="{StaticResource ListBox.Simple}" />
            </DockPanel>


            <DockPanel LastChildFill="False" Visibility="{Binding ShowWeekList, Converter={StaticResource Boolean2VisibilityConverter}}">
                <ListBox ItemsSource="{Binding WeekSource.View}" Style="{StaticResource ListBox.Simple}" />
            </DockPanel>


            <ListBox ItemsSource="{Binding DaySource.View}" Style="{StaticResource ListBox.Simple}" />




        </WrapPanel>




        <!--  每周  -->
