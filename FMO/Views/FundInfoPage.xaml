                <DockPanel>
                    <DockPanel DockPanel.Dock="Top">
                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="2">
                            <TextBlock
                                Margin="4"
                                Foreground="{StaticResource DefaultBrush}"
                                Style="{StaticResource Style.TextBlock.FlowName}"
                                Text="项目发起"
                                TextWrapping="Wrap" />
                        </Border>

                        <Grid DockPanel.Dock="Right">
                            <UserControl>
                                <UserControl.Template>
                                    <ControlTemplate TargetType="UserControl">
                                        <Grid>
                                            <ToggleButton
                                                x:Name="tb"
                                                Height="18"
                                                Margin="5,0"
                                                Padding="8,0"
                                                Content="设置日期"
                                                FontSize="9" />

                                            <Popup
                                                AllowsTransparency="True"
                                                IsOpen="{Binding ElementName=tb, Path=IsChecked}"
                                                StaysOpen="False">
                                                <Border Background="White">
                                                    <hc:DatePicker MinWidth="120" />
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </UserControl.Template>
                            </UserControl>
                            <local:CopyableControl Margin="5,0">
                                <TextBlock Text="{Binding InitiateDate, StringFormat=yyyy-MM-dd}" />
                            </local:CopyableControl>
                        </Grid>
                    </DockPanel>


                </DockPanel>



                <DockPanel DockPanel.Dock="Top">

                    <Border
                        Margin="2"
                        VerticalAlignment="Top"
                        Background="{StaticResource PrimaryBrush}"
                        CornerRadius="2">
                        <TextBlock
                            Margin="4"
                            Foreground="{StaticResource DefaultBrush}"
                            Style="{StaticResource Style.TextBlock.FlowName}"
                            Text="基金成立"
                            TextWrapping="Wrap" />
                    </Border>

                    <Grid DockPanel.Dock="Top">
                        <UserControl>
                            <UserControl.Template>
                                <ControlTemplate TargetType="UserControl">
                                    <Grid Visibility="{Binding SetupDate, Converter={StaticResource ValueIsEffectToVisibilityConverter}, ConverterParameter=true}">
                                        <ToggleButton
                                            x:Name="tb"
                                            Height="18"
                                            Margin="5,0"
                                            Padding="8,0"
                                            Content="设置日期"
                                            FontSize="9" />

                                        <Popup
                                            AllowsTransparency="True"
                                            IsOpen="{Binding ElementName=tb, Path=IsChecked}"
                                            StaysOpen="False">
                                            <Border Background="White">
                                                <hc:DatePicker MinWidth="120" />
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </ControlTemplate>
                            </UserControl.Template>
                        </UserControl>
                        <local:CopyableControl Margin="5,0">
                            <TextBlock Text="{Binding SetupDate, StringFormat=yyyy-MM-dd}" />
                        </local:CopyableControl>
                    </Grid>


                    <StackPanel>
                        <local:FileDisplay FileInfo="{Binding InitiateFundContractFile}" Header="基金合同" />
                        <local:FileDisplay FileInfo="{Binding InitiateFundContractFile}" Header="托管账户信息" />
                        <local:FileDisplay FileInfo="{Binding InitiateFundContractFile}" Header="募集账户信息" />

                    </StackPanel>
                </DockPanel>

            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
