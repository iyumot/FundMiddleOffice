<UserControl
    x:Class="FMO.StatementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    Margin="0,5"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:StatementPageViewModel />
    </UserControl.DataContext>
    <DockPanel>
        <shared:DailyReportGridView />

        <GroupBox Header="生成报表" Style="{StaticResource GroupBoxTab}">
            <hc:UniformSpacingPanel
                ChildWrapping="Wrap"
                Spacing="5"
                VerticalSpacing="5">
                <Button Command="{Binding GenerateReportCommand}" Content="净值总览" />

                <Button Command="{Binding GenerateElementSheetCommand}" Content="要素总览" />
            </hc:UniformSpacingPanel>
        </GroupBox>
    </DockPanel>
</UserControl>
