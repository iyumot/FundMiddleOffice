<UserControl
    x:Class="FMO.ManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    d:DataContext="{d:DesignInstance Type=local:ManagerPageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Tag="管理人"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource {x:Type shared:ChangeableContainer}}" TargetType="shared:ChangeableContainer">
            <Setter Property="Margin" Value="0,6" />
            <Setter Property="Entity" Value="{Binding RelativeSource={RelativeSource AncestorType=local:ManagerPage}, Path=DataContext}" />
            <Setter Property="IsReadOnly" Value="{Binding RelativeSource={RelativeSource AncestorType=local:ManagerPage}, Path=DataContext.IsReadOnly}" />
        </Style>

        <Style x:Key="RightAlignText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Right" />
        </Style>

        <SolidColorBrush x:Key="LabelBrush">Gray</SolidColorBrush>

        <Style BasedOn="{StaticResource {x:Type shared:ChangeableControl}}" TargetType="shared:ChangeableControl">
            <Setter Property="Entity" Value="{Binding RelativeSource={RelativeSource AncestorType=local:ManagerPage}, Path=DataContext}" />
            <Setter Property="IsReadOnly" Value="{Binding RelativeSource={RelativeSource AncestorType=local:ManagerPage}, Path=DataContext.IsReadOnly}" />
        </Style>

        <DataTemplate x:Key="DT.Text.Cap">
            <TextBox MinWidth="80" Text="{Binding NewValue, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
        </DataTemplate>

        <DataTemplate x:Key="DT.Person" DataType="local:PersonViewModel">
            <StackPanel DataContext="{Binding OldValue}">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Width" Value="60" />
                    </Style>
                </StackPanel.Resources>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="姓名" />
                    </BulletDecorator.Bullet>
                    <shared:CopyableTextBlock Text="{Binding Name}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="证件类型" />
                    </BulletDecorator.Bullet>
                    <shared:CopyableTextBlock Text="{Binding IDType}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="证件号" />
                    </BulletDecorator.Bullet>
                    <shared:CopyableTextBlock IsMasked="True" Text="{Binding Id}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="电话" />
                    </BulletDecorator.Bullet>
                    <shared:CopyableTextBlock Text="{Binding Phone}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="Email" />
                    </BulletDecorator.Bullet>
                    <shared:CopyableTextBlock Text="{Binding Email}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="地址" />
                    </BulletDecorator.Bullet>
                    <shared:CopyableTextBlock Text="{Binding Address}" />
                </BulletDecorator>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DT.Person.Edit" DataType="local:PersonViewModel">
            <StackPanel DataContext="{Binding NewValue}">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Width" Value="50" />
                    </Style>
                </StackPanel.Resources>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="姓名" />
                    </BulletDecorator.Bullet>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="证件类型" />
                    </BulletDecorator.Bullet>
                    <TextBox Text="{Binding IDType, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="证件号" />
                    </BulletDecorator.Bullet>
                    <TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="电话" />
                    </BulletDecorator.Bullet>
                    <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                </BulletDecorator>

                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="Email" />
                    </BulletDecorator.Bullet>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <TextBlock Text="地址" />
                    </BulletDecorator.Bullet>
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                </BulletDecorator>
            </StackPanel>
        </DataTemplate>


        <DataTemplate x:Key="DT.File">

            <DockPanel Background="Transparent" LastChildFill="False">
                <hc:SimplePanel>
                    <DockPanel>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="RoyalBlue"
                            Text="{Binding Time, StringFormat=yyyy-MM-dd}" />
                        <shared:AbbreviationText
                            x:Name="file"
                            Margin="5,2"
                            VerticalContentAlignment="Center"
                            Text="{Binding Name}" />
                    </DockPanel>
                    <hc:SimplePanel
                        x:Name="p"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch"
                        Background="White"
                        Visibility="Collapsed">
                        <hc:SimplePanel.Resources>
                            <Style BasedOn="{StaticResource ButtonIcon.Small}" TargetType="Button">
                                <Setter Property="Margin" Value="2,-5" />
                            </Style>
                        </hc:SimplePanel.Resources>
                        <DockPanel Margin="5,2" LastChildFill="False">
                            <DockPanel LastChildFill="False">
                                <Button
                                    hc:IconElement.Geometry="{DynamicResource f.book-open-reader}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=shared:MultipleFileView}, Path=Binding.ViewCommand}"
                                    CommandParameter="{Binding .}"
                                    Foreground="Lime"
                                    ToolTip="查看" />

                                <Button
                                    hc:IconElement.Geometry="{DynamicResource f.clone}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=shared:MultipleFileView}, Path=Binding.CopyCommand}"
                                    CommandParameter="{Binding .}"
                                    Foreground="RoyalBlue"
                                    ToolTip="复制" />

                                <Button
                                    hc:IconElement.Geometry="{DynamicResource f.file-export}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=shared:MultipleFileView}, Path=Binding.SaveAsCommand}"
                                    CommandParameter="{Binding .}"
                                    ToolTip="另存为" />


                            </DockPanel>

                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.xmark}"
                                Command="{Binding Binding.DeleteFileCommand, RelativeSource={RelativeSource AncestorType=shared:MultipleFileView}}"
                                CommandParameter="{Binding .}"
                                Foreground="Red"
                                Style="{DynamicResource ButtonIcon.Small}"
                                ToolTip="删除"
                                Visibility="{Binding DataContext.IsReadOnly, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource Boolean2VisibilityReConverter}}" />
                        </DockPanel>
                    </hc:SimplePanel>

                </hc:SimplePanel>
                <TextBlock
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="8"
                    Foreground="Red"
                    Text="文件已被删除"
                    Visibility="{Binding Exists, Converter={StaticResource Boolean2VisibilityReConverter}}" />

            </DockPanel>
            <DataTemplate.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Exists, TargetNullValue=False}" Value="True" />
                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="p" Property="Visibility" Value="Visible" />
                </MultiDataTrigger>

                <DataTrigger Binding="{Binding Exists, TargetNullValue=False}" Value="False">
                    <Setter TargetName="file" Property="Foreground" Value="Gray" />
                </DataTrigger>

            </DataTemplate.Triggers>
        </DataTemplate>
        <Style x:Key="CardFileStyle" TargetType="shared:MultipleFileView">

            <Setter Property="MaxHeight" Value="21" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="shared:MultipleFileView">
                        <Border>
                            <Border.Resources>
                                <CollectionViewSource x:Key="data" Source="{Binding Binding.Files, RelativeSource={RelativeSource TemplatedParent}}" />
                            </Border.Resources>
                            <DockPanel Background="Transparent">
                                <TextBlock
                                    x:Name="lb"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource LabelBrush}"
                                    Text="{Binding Binding.Label, RelativeSource={RelativeSource TemplatedParent}}" />
                                <Grid>
                                    <Viewbox
                                        x:Name="arrow"
                                        Width="14"
                                        Height="14"
                                        Margin="2,0,8,0"
                                        VerticalAlignment="Center">
                                        <Path
                                            Data="{DynamicResource f.angle-right}"
                                            Fill="Black"
                                            Stroke="Black" />
                                    </Viewbox>

                                    <Button
                                        x:Name="add"
                                        hc:IconElement.Geometry="{DynamicResource f.gear}"
                                        Command="{Binding Binding.AddFileCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                        CommandParameter="{Binding ., RelativeSource={RelativeSource TemplatedParent}}"
                                        Style="{DynamicResource ButtonIcon.Small}"
                                        ToolTip="设置文件"
                                        Visibility="Hidden" />

                                </Grid>


                                <ListBox
                                    x:Name="list"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemTemplate="{StaticResource DT.File}"
                                    ItemsSource="{Binding Source={StaticResource data}}"
                                    Style="{DynamicResource ListBoxCustom}" />

                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsReadOnly" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="add" Property="Visibility" Value="Visible" />
                                <Setter TargetName="arrow" Property="Visibility" Value="Collapsed" />
                            </MultiTrigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                BeginTime="0:0:0"
                                                Storyboard.TargetProperty="MaxHeight"
                                                From="21"
                                                To="200" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                BeginTime="0:0:0.5"
                                                Storyboard.TargetProperty="MaxHeight"
                                                From="200"
                                                To="21"
                                                Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <!--<Setter Property="MaxHeight" Value="200" />-->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <local:ManagerPageViewModel />
    </UserControl.DataContext>
    <DockPanel>

        <Grid Width="450" Margin="0,10">
            <StackPanel TextElement.FontSize="13">
                <StackPanel.Resources>
                    <Style TargetType="ContentControl">
                        <Setter Property="Margin" Value="0,3" />
                    </Style>
                </StackPanel.Resources>

                <shared:ChangeableControl Binding="{Binding ManagerName}" />



                <UniformGrid Margin="0,0,30,0" Columns="2">
                    <shared:ChangeableControl Binding="{Binding ArtificialPerson}" />
                    <shared:ChangeableControl Binding="{Binding RegisterNo}" IsReadOnly="True" />


                    <shared:ChangeableControl Binding="{Binding RegisterCapital}" EditTemplate="{StaticResource DT.Text.Cap}" />
                    <shared:ChangeableControl Binding="{Binding RealCapital}" EditTemplate="{StaticResource DT.Text.Cap}" />


                    <shared:ChangeableControl Binding="{Binding SetupDate}">
                        <shared:ChangeableControl.EditTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding NewValue}" />
                            </DataTemplate>
                        </shared:ChangeableControl.EditTemplate>
                    </shared:ChangeableControl>


                    <shared:ChangeableControl Binding="{Binding ExpireDate}">
                        <shared:ChangeableControl.EditTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <DatePicker
                                        Width="110"
                                        SelectedDate="{Binding NewValue.Date}"
                                        Visibility="{Binding NewValue.IsLongTerm, Converter={StaticResource Boolean2VisibilityReConverter}}" />
                                    <CheckBox
                                        Margin="8,0"
                                        Content="至今"
                                        IsChecked="{Binding NewValue.IsLongTerm}" />
                                </DockPanel>
                            </DataTemplate>
                        </shared:ChangeableControl.EditTemplate>
                    </shared:ChangeableControl>

                    <shared:ChangeableControl Binding="{Binding RegisterDate}">
                        <shared:ChangeableControl.EditTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding NewValue}" />
                            </DataTemplate>
                        </shared:ChangeableControl.EditTemplate>
                    </shared:ChangeableControl>
                    <TextBlock />


                    <shared:ChangeableControl Binding="{Binding Telephone}" EditTemplate="{StaticResource DT.Text.Cap}" />
                    <shared:ChangeableControl Binding="{Binding Fax}" EditTemplate="{StaticResource DT.Text.Cap}" />


                </UniformGrid>

                <DockPanel>

                    <shared:ChangeableControl Binding="{Binding WebSite}" />

                    <Button
                        hc:IconElement.Geometry="{StaticResource f.arrow-up-right-from-square}"
                        Command="{Binding OpenLinkCommand}"
                        Foreground="{StaticResource PrimaryBrush}"
                        Style="{StaticResource ButtonIcon.Small}" />
                </DockPanel>

                <shared:ChangeableControl Binding="{Binding InstitutionCode}" IsReadOnly="True" />


                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding RegisterAddress}" />
                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding OfficeAddress}" />
                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding BusinessScope}">
                    <shared:ChangeableControl.EditTemplate>
                        <DataTemplate>
                            <TextBox
                                MinHeight="100"
                                AcceptsReturn="True"
                                Text="{Binding NewValue, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </shared:ChangeableControl.EditTemplate>
                </shared:ChangeableControl>


                <!--  logo  -->
                <GroupBox Header="Logo" Style="{StaticResource GroupBoxTab}">
                    <DockPanel>
                        <Grid
                            AllowDrop="True"
                            Background="Transparent"
                            Drop="Grid_Drop">
                            <Image
                                Width="64"
                                Height="64"
                                Source="{Binding MainLogo}" />

                            <TextBlock Text="Logo" Visibility="{Binding MainLogo, Converter={StaticResource Object2VisibilityReConverter}}" />
                        </Grid>
                        <Image />
                    </DockPanel>
                </GroupBox>


                <GroupBox
                    Margin="0,20,0,0"
                    local:HelpService.Help="可以设置多个文件，保存历史证件"
                    local:HelpService.Placement="Bottom"
                    Background="WhiteSmoke"
                    Header="证件"
                    Style="{StaticResource GroupBoxTab}">
                    <StackPanel>
                        <shared:MultipleFileView Binding="{Binding BusinessLicense}" Style="{StaticResource CardFileStyle}" />
                        <shared:MultipleFileView Binding="{Binding BusinessLicense2}" Style="{StaticResource CardFileStyle}" />
                        <shared:MultipleFileView Binding="{Binding AccountOpeningLicense}" Style="{StaticResource CardFileStyle}" />
                        <shared:MultipleFileView Binding="{Binding CharterDocument}" Style="{StaticResource CardFileStyle}" />
                        <!--<shared:MultipleFileView Binding="{Binding LegalPersonIdCard}" Style="{StaticResource CardFileStyle}" />-->

                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                <ToggleButton
                    hc:IconElement.Geometry="{StaticResource f.pencil}"
                    local:HelpService.Help="点击这里修改管理人资料和证件"
                    local:HelpService.Placement="Right"
                    BorderThickness="0"
                    DockPanel.Dock="Right"
                    IsChecked="{Binding IsReadOnly}"
                    Style="{StaticResource EditSwitch}">
                    <!--<local:HelpService.Help>
                        <DataTemplate>
                            <TextBlock Text="点击这里修改管理人资料和证件" />
                        </DataTemplate>
                    </local:HelpService.Help>-->
                </ToggleButton>

                <Button
                    Height="50"
                    Margin="0,10"
                    Command="{Binding OpenAmacPageCommand}">
                    <TextBlock
                        MaxWidth="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="公示信息"
                        TextWrapping="Wrap" />
                </Button>
            </StackPanel>
        </Grid>

        <StackPanel Margin="5,0">

            <StackPanel>
                <Border>
                    <DockPanel LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="成员" />
                        <Button
                            hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                            Command="{Binding AddMemberCommand}"
                            Foreground="Green"
                            Style="{StaticResource ButtonIcon}" />

                        <hc:SimplePanel>
                            <hc:LoadingCircle
                                Width="24"
                                Height="24"
                                DotDiameter="3"
                                Visibility="{Binding LoadMemberFromAmacCommand.IsRunning, Converter={StaticResource Boolean2VisibilityConverter}}" />
                            <Button
                                hc:IconElement.Geometry="{StaticResource f.download}"
                                Command="{Binding LoadMemberFromAmacCommand}"
                                Style="{StaticResource ButtonIcon}"
                                ToolTip="从协会更新" />
                        </hc:SimplePanel>
                    </DockPanel>
                </Border>

                <DataGrid
                    Name="memberList"
                    d:ItemsSource="{d:SampleData}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding MemberSource.View}"
                    Style="{StaticResource DataGrid.NoSelect}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="姓名">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="证件号">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock IsMasked="True" Text="{Binding Identity.Id}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="电话">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock Text="{Binding Phone}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTemplateColumn Header="证件">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <Button
                                            Margin="-5"
                                            hc:IconElement.Geometry="{DynamicResource f.book-open-reader}"
                                            Command="{Binding ViewCommand}"
                                            Foreground="Lime"
                                            Style="{DynamicResource ButtonIcon.Small}"
                                            ToolTip="查看"
                                            Visibility="{Binding IdFile, TargetNullValue=Collapsed, Converter={StaticResource FileExistsToVisibilityConverter}}" />

                                        <Button
                                            Margin="0"
                                            hc:IconElement.Geometry="{DynamicResource f.gear}"
                                            Command="{Binding SetFileCommand}"
                                            CommandParameter="{Binding .}"
                                            Style="{DynamicResource ButtonIcon.Small}"
                                            ToolTip="更换" />

                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>



                        <!--  编辑/删除  -->
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.circle-minus}"
                                            Command="{Binding DataContext.RemoveMemberCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding .}"
                                            Foreground="Red"
                                            Style="{StaticResource ButtonIcon.Small}" />


                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.pen}"
                                            Command="{Binding DataContext.EditMemberCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource ButtonIcon.Small}" />
                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>


                <Popup
                    IsOpen="{Binding ShowMemberPopup}"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=memberList}"
                    StaysOpen="False">
                    <Border MaxWidth="600" Background="WhiteSmoke">
                        <local:ManagerMemberView Margin="0,5" DataContext="{Binding MemberContext}" />
                    </Border>
                </Popup>
            </StackPanel>


            <!--  股权结构  -->
            <StackPanel>
                <Border>
                    <DockPanel LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="股东" />



                        <Button
                            hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                            Command="{Binding AddShareHolderCommand}"
                            Foreground="Green"
                            Style="{StaticResource ButtonIcon}" />


                        <!--<Button
                            hc:IconElement.Geometry="{StaticResource f.dharmachakra}"
                            Command="{Binding OpenOwnershipCommand}"
                            Style="{StaticResource ButtonIcon}"
                            ToolTip="股权结构图" />-->
                    </DockPanel>
                </Border>

                <DataGrid
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding ShareRelations}"
                    Style="{StaticResource DataGrid.NoSelect}">
                    <!--<DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <DataGrid
                                AutoGenerateColumns="False"
                                HeadersVisibility="None"
                                ItemsSource="{Binding Children}"
                                Style="{StaticResource DataGrid.NoSelect}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="姓名">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <shared:CopyableTextBlock Text="{Binding Holder.Name}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="认缴金额">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <shared:CopyableTextBlock HorizontalAlignment="Right" Text="{Binding Share}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn
                                        Binding="{Binding Ratio, StringFormat=P2}"
                                        ElementStyle="{StaticResource RightAlignText}"
                                        Header="占比" />

                    -->
                    <!--  编辑/删除  -->
                    <!--
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DockPanel LastChildFill="False">
                                                    <Button
                                                        hc:IconElement.Geometry="{StaticResource f.circle-minus}"
                                                        Command="{Binding DataContext.RemoveShareHolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding .}"
                                                        Foreground="Red"
                                                        Style="{StaticResource ButtonIcon.Small}" />


                                                    <Button
                                                        hc:IconElement.Geometry="{StaticResource f.pen}"
                                                        Command="{Binding DataContext.EditShareHolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding .}"
                                                        Style="{StaticResource ButtonIcon.Small}" />
                                                </DockPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>-->
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="姓名">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock Text="{Binding Holder.Name}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="认缴金额">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock HorizontalAlignment="Right" Text="{Binding Share}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn
                            Binding="{Binding Ratio, StringFormat=P2}"
                            ElementStyle="{StaticResource RightAlignText}"
                            Header="占比" />

                        <!--  编辑/删除  -->
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.circle-minus}"
                                            Command="{Binding DataContext.RemoveShareHolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding .}"
                                            Foreground="Red"
                                            Style="{StaticResource ButtonIcon.Small}" />


                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.pen}"
                                            Command="{Binding DataContext.EditShareHolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource ButtonIcon.Small}" />
                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>







        <TextBlock />
    </DockPanel>
</UserControl>
