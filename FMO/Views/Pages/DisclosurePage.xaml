<UserControl
    x:Class="FMO.DisclosurePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:DisclosurePageViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <!--  定义 ListBoxItem 样式  -->
        <Style x:Key="ZoomOnSelectListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="ItemBorder"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1.0" ScaleY="1.0" />
                            </Border.RenderTransform>
                            <ContentPresenter
                                Margin="0,4"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextElement.FontSize="16" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="RoyalBlue" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <DockPanel>
        <ListBox
            BorderThickness="0"
            ItemContainerStyle="{StaticResource ZoomOnSelectListBoxItemStyle}"
            ItemsSource="{Binding Years}"
            SelectedIndex="0"
            SelectedItem="{Binding SelectedYear}" />

        <ListBox
            BorderThickness="0"
            DockPanel.Dock="Top"
            ItemContainerStyle="{StaticResource ZoomOnSelectListBoxItemStyle}"
            ItemsPanel="{StaticResource UniformHorizontalItemsPanelTemplate}"
            ItemsSource="{Binding Months}"
            SelectedIndex="0"
            SelectedItem="{Binding SelectedMonth}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ., StringFormat={}{0}月}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <ScrollViewer>
            <hc:UniformSpacingPanel Orientation="Vertical" Spacing="8">
                <hc:UniformSpacingPanel.Resources>
                    <Style BasedOn="{StaticResource GroupBoxTab}" TargetType="GroupBox" />

                    <DataTemplate x:Key="ReportItem">
                        <Border>
                            <DockPanel Margin="4">
                                <TextBlock
                                    DockPanel.Dock="Top"
                                    FontSize="15"
                                    Text="{Binding FundName}" />
                                <hc:UniformSpacingPanel
                                    ChildWrapping="Wrap"
                                    Spacing="5"
                                    VerticalSpacing="5">

                                    <shared:FileView Content="{Binding Word}" Style="{StaticResource SimpleViewOnlyFileStyle}">
                                        <shared:FileView.Header>
                                            <Viewbox Width="14" Height="14">
                                                <Path Data="{StaticResource f.file-word}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Control}}}" />
                                            </Viewbox>
                                        </shared:FileView.Header>
                                    </shared:FileView>

                                    <shared:FileView
                                        Content="{Binding Excel}"
                                        HeaderTemplate="{x:Null}"
                                        Style="{StaticResource SimpleViewOnlyFileStyle}">
                                        <shared:FileView.Header>
                                            <Viewbox Width="14" Height="14">
                                                <Path Data="{StaticResource f.file-excel}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Control}}}" />
                                            </Viewbox>
                                        </shared:FileView.Header>
                                    </shared:FileView>

                                    <shared:FileView Content="{Binding Pdf}" Style="{StaticResource SimpleViewOnlyFileStyle}">
                                        <shared:FileView.Header>
                                            <Viewbox Width="14" Height="14">
                                                <Path Data="{StaticResource f.file-pdf}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Control}}}" />
                                            </Viewbox>
                                        </shared:FileView.Header>
                                    </shared:FileView>

                                    <shared:FileView Content="{Binding Xbrl}" Style="{StaticResource SimpleViewOnlyFileStyle}">
                                        <shared:FileView.Header>
                                            <Viewbox Width="14" Height="14">
                                                <Path Data="{StaticResource f.file-code}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Control}}}" />
                                            </Viewbox>
                                        </shared:FileView.Header>
                                    </shared:FileView>


                                    <Button
                                        hc:IconElement.Geometry="{StaticResource f.upload}"
                                        Command="{Binding UploadCommand}"
                                        Style="{StaticResource ButtonIcon.Small}" />
                                </hc:UniformSpacingPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </hc:UniformSpacingPanel.Resources>
                <Expander
                    Header="月报"
                    IsExpanded="True"
                    Visibility="{Binding MonthlySource.View.IsEmpty, Converter={StaticResource Boolean2VisibilityReConverter}}">

                    <ListBox
                        ItemTemplate="{StaticResource ReportItem}"
                        ItemsSource="{Binding MonthlySource.View}"
                        Style="{StaticResource ListBoxCustom}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <hc:UniformSpacingPanel
                                    ChildWrapping="Wrap"
                                    HorizontalSpacing="20"
                                    IsItemsHost="True"
                                    VerticalSpacing="5" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Expander>

                <Expander IsExpanded="True" Visibility="{Binding QuarterlySource.View.IsEmpty, Converter={StaticResource Boolean2VisibilityReConverter}}">
                    <Expander.Header>
                        <DockPanel>
                            <TextBlock
                                Margin="10,0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="季报" />
                            <Button
                                hc:IconElement.Geometry="{StaticResource f.upload}"
                                Command="{Binding UploadQuarterlyCommand}"
                                Style="{StaticResource ButtonIcon.Small}" />

                            <Button
                                hc:IconElement.Geometry="{StaticResource f.box}"
                                Command="{Binding GenerateMeishiAnnouncesCommand}"
                                Style="{StaticResource ButtonIcon.Small}" />
                        </DockPanel>
                    </Expander.Header>
                    <ListBox
                        ItemTemplate="{StaticResource ReportItem}"
                        ItemsSource="{Binding QuarterlySource.View}"
                        Style="{StaticResource ListBoxCustom}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <hc:UniformSpacingPanel
                                    ChildWrapping="Wrap"
                                    HorizontalSpacing="20"
                                    IsItemsHost="True"
                                    VerticalSpacing="5" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Expander>

                <Expander
                    Header="半年报"
                    IsExpanded="True"
                    Visibility="{Binding SemiAnnualSource.View.IsEmpty, Converter={StaticResource Boolean2VisibilityReConverter}}">

                    <ListBox
                        ItemTemplate="{StaticResource ReportItem}"
                        ItemsSource="{Binding SemiAnnualSource.View}"
                        Style="{StaticResource ListBoxCustom}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <hc:UniformSpacingPanel
                                    ChildWrapping="Wrap"
                                    HorizontalSpacing="20"
                                    IsItemsHost="True"
                                    VerticalSpacing="5" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Expander>

                <Expander
                    Header="年报"
                    IsExpanded="True"
                    Visibility="{Binding AnnualSource.View.IsEmpty, Converter={StaticResource Boolean2VisibilityReConverter}}">

                    <ListBox
                        ItemTemplate="{StaticResource ReportItem}"
                        ItemsSource="{Binding AnnualSource.View}"
                        Style="{StaticResource ListBoxCustom}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <hc:UniformSpacingPanel
                                    ChildWrapping="Wrap"
                                    HorizontalSpacing="20"
                                    IsItemsHost="True"
                                    VerticalSpacing="5" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Expander>
            </hc:UniformSpacingPanel>

        </ScrollViewer>

    </DockPanel>
</UserControl>
