                </StackPanel>
            </Border>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="SecurityCardPanel">
            <WrapPanel IsItemsHost="True" />
        </ItemsPanelTemplate>


        <ItemsPanelTemplate x:Key="StockAccountPanel">
            <UniformGrid Columns="3" IsItemsHost="True" />
        </ItemsPanelTemplate>

    </UserControl.Resources>
    <StackPanel Margin="10">

        <UniformGrid Rows="2">
            <UniformGrid.Resources>
                <Style BasedOn="{StaticResource TextBoxExtend}" TargetType="TextBox">
                    <Setter Property="Margin" Value="5,0,0,0" />
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Width" Value="85" />
                </Style>
            </UniformGrid.Resources>
            <BulletDecorator>
                <BulletDecorator.Bullet>
                    <TextBlock Text="证券一码通" />
                </BulletDecorator.Bullet>
                <shared:CopyableControl HorizontalContentAlignment="Stretch">
                    <TextBox Text="{Binding UniversalNo}" />
                </shared:CopyableControl>
            </BulletDecorator>

            <BulletDecorator>
                <BulletDecorator.Bullet>
                    <TextBlock Text="中债登债券账户" />
                </BulletDecorator.Bullet>
                <shared:CopyableControl HorizontalContentAlignment="Stretch">
                    <TextBox Text="{Binding UniversalNo}" />
                </shared:CopyableControl>
            </BulletDecorator>

            <BulletDecorator>
                <BulletDecorator.Bullet>
                    <TextBlock Text="统一开户编码" />
                </BulletDecorator.Bullet>
                <shared:CopyableControl HorizontalContentAlignment="Stretch">
                    <TextBox Text="{Binding UniversalNo}" />
                </shared:CopyableControl>
            </BulletDecorator>

            <BulletDecorator>
                <BulletDecorator.Bullet>
                    <TextBlock Text="上清所债券账户" />
                </BulletDecorator.Bullet>
                <shared:CopyableControl HorizontalContentAlignment="Stretch">
                    <TextBox Text="{Binding UniversalNo}" />
                </shared:CopyableControl>
            </BulletDecorator>
        </UniformGrid>

        <!--  证券账户  -->

        <Separator Margin="8" />


        <DockPanel>
            <Border
                Width="60"
                Background="Green"
                CornerRadius="5">
                <StackPanel>
                    <TextBlock
                        Margin="5,10"
                        FontSize="16"
                        Foreground="White"
                        Text="股东卡" />

                    <Button
                        hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                        Command="{Binding AddSecurityCardCommand}"
                        Foreground="White"
                        Style="{StaticResource ButtonIcon}" />
                </StackPanel>

            </Border>

            <ListBox
                d:ItemsSource="{d:SampleData}"
                BorderThickness="0"
                ItemTemplate="{StaticResource SecurityCardItem}"
                ItemsPanel="{StaticResource SecurityCardPanel}"
                ItemsSource="{Binding SecurityCards}"
                Style="{StaticResource ListBoxCustom}" />
        </DockPanel>


        <Separator Margin="8" />

        <!--  股票户  -->
        <DockPanel>
            <Border
                Name="stocktag"
                Width="60"
                Background="Green"
                CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        Width="40"
                        Margin="5,10"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="股票账户"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <Button
                        hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                        Command="{Binding AddStockCommand}"
                        Foreground="White"
                        Style="{StaticResource ButtonIcon}" />
                </StackPanel>

            </Border>

            <ListBox
                d:ItemsSource="{d:SampleData}"
                BorderThickness="0"
                ItemTemplate="{StaticResource StockItem}"
                ItemsPanel="{StaticResource StockAccountPanel}"
                ItemsSource="{Binding StockAccounts}"
                Style="{StaticResource ListBoxCustom}" />

            <Popup
                IsOpen="{Binding ShowChooseStockCompany}"
                Placement="Right"
                PlacementTarget="{Binding ElementName=stocktag}"
                StaysOpen="False">
                <Border Background="WhiteSmoke">
                    <StackPanel>
                        <!--  搜索  -->
                        <hc:SimplePanel Height="30" Margin="10,0">
                            <TextBox
                                MinWidth="180"
                                Padding="4"
                                HorizontalContentAlignment="Center"
                                Style="{StaticResource TextBox.Small}"
                                Text="{Binding SecurityCompanyKeyword, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                            <Viewbox
                                Width="24"
                                Margin="5,0"
                                HorizontalAlignment="Right">
                                <Path Data="{StaticResource f.magnifying-glass}" Fill="Black" />
                            </Viewbox>
                        </hc:SimplePanel>
                        <ListBox
                            Width="260"
                            Height="300"
                            Margin="8"
                            ItemsSource="{Binding SecurityCompanies.View}"
                            SelectedItem="{Binding SelectedSecurityCompany}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Height="15"
                                        VerticalAlignment="Center"
                                        Text="{Binding .}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Popup>
        </DockPanel>



    </StackPanel>
</UserControl>
