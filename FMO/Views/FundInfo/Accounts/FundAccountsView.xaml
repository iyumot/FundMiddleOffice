<UserControl
    x:Class="FMO.FundAccountsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:FMO.Models;assembly=FMO.Models"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    d:DataContext="{d:DesignInstance Type=local:FundAccountsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        
 

        <DataTemplate x:Key="SecurityCardItem" DataType="model:SecurityCard">
            <hc:SimplePanel>
                <Border Margin="2" Background="WhiteSmoke">
                    <DockPanel Margin="6">
                        <DockPanel
                            Margin="0,6"
                            DockPanel.Dock="Bottom"
                            LastChildFill="False">
                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.copy}"
                                Command="{Binding CopyCommand}"
                                Foreground="RoyalBlue"
                                Style="{DynamicResource ButtonIcon}"
                                ToolTip="复制账号" />

                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.book-open-reader}"
                                Command="{Binding ViewCommand}"
                                Foreground="Lime"
                                Style="{DynamicResource ButtonIcon}"
                                ToolTip="查看" />
                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.file-export}"
                                Command="{Binding SaveAsCommand}"
                                Style="{DynamicResource ButtonIcon}"
                                ToolTip="另存为" />

                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.print}"
                                Command="{Binding PrintCommand}"
                                Style="{DynamicResource ButtonIcon}"
                                ToolTip="打印" />
                        </DockPanel>

                        <TextBlock
                            Margin="0,3,0,0"
                            HorizontalAlignment="Center"
                            DockPanel.Dock="Bottom"
                            Foreground="Gray"
                            Text="{Binding Date, StringFormat=yyyy-MM-dd}" />


                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{Binding CardNo}" />
                    </DockPanel>
                </Border>
                <hc:SimplePanel
                    Margin="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Text="{Binding Tag}" />
                </hc:SimplePanel>
            </hc:SimplePanel>
        </DataTemplate>

        <DataTemplate x:Key="StockItem" DataType="local:StockAccountViewModel">
            <Border Margin="2,0" Background="WhiteSmoke">
                <StackPanel MinWidth="300">
                    <TextBlock
                        Margin="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Style="{StaticResource TextBlockDefaultBold}"
                        Text="{Binding Company}" />

                    <!--  基本户  -->
                    <DockPanel DataContext="{Binding Common}">
                        <Border Background="Orange">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                                <TextBlock
                                    Width="40"
                                    Margin="3,0"
                                    Padding="4"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{Binding Name}"
                                    TextWrapping="Wrap" />
                                <StackPanel HorizontalAlignment="Center">
                                    <ToggleButton
                                        DockPanel.Dock="Bottom"
                                        IsChecked="{Binding IsReadOnly, Converter={StaticResource Boolean2BooleanReConverter}}"
                                        Style="{StaticResource ToggleEditable}" />
                                    <Button
                                        hc:IconElement.Geometry="{StaticResource f.floppy-disk}"
                                        Command="{Binding SaveCommand}"
                                        Style="{StaticResource ButtonIcon.Small}"
                                        Visibility="{Binding IsReadOnly, Converter={StaticResource Boolean2VisibilityReConverter}}" />
                                </StackPanel>

                            </StackPanel>
                        </Border>

                        <StackPanel Margin="2,0">
                            <UniformGrid Rows="1">
                                <DockPanel>
                                    <TextBlock FontSize="14" Text="原始材料" />
                                    <Button
                                        hc:IconElement.Geometry="{StaticResource f.folder}"
                                        Command="{Binding OpenRawFolderCommand}"
                                        Style="{StaticResource ButtonIcon.Small}" />
                                </DockPanel>


                                <DockPanel>
                                    <TextBlock FontSize="14" Text="用印文件" />
                                    <Button
                                        hc:IconElement.Geometry="{StaticResource f.folder}"
                                        Command="{Binding OpenSealFolderCommand}"
                                        Style="{StaticResource ButtonIcon.Small}" />
                                </DockPanel>
                            </UniformGrid>

                            <shared:FileControl Binding="{Binding BankLetter}" IsReadOnly="{Binding IsReadOnly}" />

                            <BulletDecorator>
                                <BulletDecorator.Bullet>
                                    <TextBlock Text="资金账号" />
                                </BulletDecorator.Bullet>
                                <shared:CopyableControl>
                                    <TextBox
                                        Margin="4,0"
                                        IsReadOnly="{Binding IsReadOnly}"
                                        Style="{StaticResource TextBox.Small}"
                                        Text="{Binding Account, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                                </shared:CopyableControl>
                            </BulletDecorator>


                            <BulletDecorator>
                                <BulletDecorator.Bullet>
                                    <TextBlock Text="交易密码" />
                                </BulletDecorator.Bullet>
                                <shared:CopyableControl>
                                    <TextBox
                                        Margin="4,0"
                                        IsReadOnly="{Binding IsReadOnly}"
                                        Style="{StaticResource TextBox.Small}"
                                        Text="{Binding TradePassword, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                                </shared:CopyableControl>
                            </BulletDecorator>


                            <BulletDecorator>
                                <BulletDecorator.Bullet>
                                    <TextBlock Text="资金密码" />
                                </BulletDecorator.Bullet>
                                <shared:CopyableControl>
                                    <TextBox
                                        Margin="4,0"
                                        IsReadOnly="{Binding IsReadOnly}"
                                        Style="{StaticResource TextBox.Small}"
                                        Text="{Binding CapitalPassword, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                                </shared:CopyableControl>
                            </BulletDecorator>
                        </StackPanel>
                    </DockPanel>

