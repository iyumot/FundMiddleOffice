<UserControl
    x:Class="FMO.FundAccountsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:FMO.Models;assembly=FMO.Models"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="SecurityCardItem" DataType="model:SecurityCard">
            <hc:SimplePanel>
                <Border Margin="2" Background="WhiteSmoke">
                    <DockPanel Margin="6">
                        <DockPanel
                            Margin="0,6"
                            DockPanel.Dock="Bottom"
                            LastChildFill="False">
                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.copy}"
                                Command="{Binding CopyCommand}"
                                Foreground="RoyalBlue"
                                Style="{DynamicResource ButtonIcon}"
                                ToolTip="复制账号" />

                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.book-open-reader}"
                                Command="{Binding ViewCommand}"
                                Foreground="Lime"
                                Style="{DynamicResource ButtonIcon}"
                                ToolTip="查看" />
                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.file-export}"
                                Command="{Binding SaveAsCommand}"
                                Style="{DynamicResource ButtonIcon}"
                                ToolTip="另存为" />

                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.print}"
                                Command="{Binding PrintCommand}"
                                Style="{DynamicResource ButtonIcon}"
                                ToolTip="打印" />
                        </DockPanel>

                        <TextBlock
                            Margin="0,3,0,0"
                            HorizontalAlignment="Center"
                            DockPanel.Dock="Bottom"
                            Foreground="Gray"
                            Text="{Binding Date, StringFormat=yyyy-MM-dd}" />


                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{Binding CardNo}" />
                    </DockPanel>
                </Border>
                <hc:SimplePanel
                    Margin="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Text="{Binding Tag}" />
                </hc:SimplePanel>
            </hc:SimplePanel>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="SecurityCardPanel">
            <WrapPanel IsItemsHost="True" />
        </ItemsPanelTemplate>
    </UserControl.Resources>
    <StackPanel Margin="10">

        <UniformGrid Rows="2">
            <UniformGrid.Resources>
                <Style BasedOn="{StaticResource TextBoxExtend}" TargetType="TextBox">
                    <Setter Property="Margin" Value="5,0,0,0" />
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Width" Value="85" />
                </Style>
            </UniformGrid.Resources>
            <BulletDecorator>
                <BulletDecorator.Bullet>
                    <TextBlock Text="证券一码通" />
                </BulletDecorator.Bullet>
                <shared:CopyableControl HorizontalContentAlignment="Stretch">
                    <TextBox Text="{Binding UniversalNo}" />
                </shared:CopyableControl>
            </BulletDecorator>

            <BulletDecorator>
                <BulletDecorator.Bullet>
                    <TextBlock Text="中债登债券账户" />
                </BulletDecorator.Bullet>
                <shared:CopyableControl HorizontalContentAlignment="Stretch">
                    <TextBox Text="{Binding UniversalNo}" />
                </shared:CopyableControl>
            </BulletDecorator>

            <BulletDecorator>
                <BulletDecorator.Bullet>
                    <TextBlock Text="统一开户编码" />
                </BulletDecorator.Bullet>
                <shared:CopyableControl HorizontalContentAlignment="Stretch">
                    <TextBox Text="{Binding UniversalNo}" />
                </shared:CopyableControl>
            </BulletDecorator>

            <BulletDecorator>
                <BulletDecorator.Bullet>
                    <TextBlock Text="上清所债券账户" />
                </BulletDecorator.Bullet>
                <shared:CopyableControl HorizontalContentAlignment="Stretch">
                    <TextBox Text="{Binding UniversalNo}" />
                </shared:CopyableControl>
            </BulletDecorator>
        </UniformGrid>

        <!--  证券账户  -->

        <Separator Margin="8" />


        <DockPanel>
            <Border
                Width="60"
                Background="Green"
                CornerRadius="5">
                <StackPanel>
                    <TextBlock
                        Margin="5,10"
                        FontSize="16"
                        Foreground="White"
                        Text="股东卡" />

                    <Button
                        hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                        Command="{Binding AddSecurityCardCommand}"
                        Foreground="White"
                        Style="{StaticResource ButtonIcon}" />
                </StackPanel>

            </Border>

            <ListBox
                d:ItemsSource="{d:SampleData}"
                BorderThickness="0"
                ItemTemplate="{StaticResource SecurityCardItem}"
                ItemsPanel="{StaticResource SecurityCardPanel}"
                ItemsSource="{Binding SecurityCards}"
                Style="{StaticResource ListBoxCustom}" />
        </DockPanel>


        <Separator Margin="8" />

        <!--  股票户  -->
        <DockPanel>
            <Border
                Width="60"
                Background="Green"
                CornerRadius="5">
                <StackPanel>
                    <TextBlock
                        Width="40"
                        Margin="5,10"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="股票账户"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <Button
                        hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                        Command="{Binding AddSecurityCardCommand}"
                        Foreground="White"
                        Style="{StaticResource ButtonIcon}" />
                </StackPanel>

            </Border>

            <ListBox
                d:ItemsSource="{d:SampleData}"
                BorderThickness="0"
                ItemTemplate="{StaticResource SecurityCardItem}"
                ItemsPanel="{StaticResource SecurityCardPanel}"
                ItemsSource="{Binding SecurityCards}"
                Style="{StaticResource ListBoxCustom}" />
        </DockPanel>



    </StackPanel>
</UserControl>
