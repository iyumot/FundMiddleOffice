<UserControl
    x:Class="FMO.NetValueListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources />
    <Grid>
        <DataGrid
            Margin="8,0"
            AllowDrop="True"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="0"
            EnableRowVirtualization="True"
            IsReadOnly="True"
            ItemsSource="{Binding DailySource.View}"
            SelectedIndex="-1"
            SelectionUnit="FullRow"
            Style="{StaticResource DataGrid.Small}">
            <DataGrid.Resources>
                <Style
                    x:Key="style"
                    BasedOn="{StaticResource TextBlockDefault}"
                    TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="TextAlignment" Value="Center" />
                    <Setter Property="shared:MaskService.IsMask" Value="True" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="TextAlignment" Value="Center" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <!--<Setter Property="Height" Value="32" />-->
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Date.DayOfWeek}" Value="Friday">
                            <Setter Property="Background" Value="LightGray" />
                        </DataTrigger>
                        <!--<Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{x:Null}" />
                            <Setter Property="BorderBrush" Value="{x:Null}" />
                        </Trigger>-->
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                x:Name="b"
                                Height="28"
                                Margin="-8"
                                hc:IconElement.Geometry="{StaticResource f.file-excel}"
                                Command="{Binding DataContext.ViewSheetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding .}"
                                Style="{StaticResource ButtonIcon.Small}"
                                Visibility="Visible" />
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding SheetPath}" Value="{x:Null}">
                                    <Setter TargetName="b" Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Binding="{Binding Date, StringFormat=yyyy-MM-dd}"
                    ElementStyle="{StaticResource style}"
                    Header="日期"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding NetValue, StringFormat=N4}"
                    CanUserSort="False"
                    ElementStyle="{StaticResource style}"
                    Header="净值" />
                <DataGridTextColumn
                    Binding="{Binding CumNetValue, StringFormat=N4}"
                    CanUserSort="False"
                    ElementStyle="{StaticResource style}"
                    Header="累计净值" />
                <DataGridTextColumn
                    Binding="{Binding Share, StringFormat=N2}"
                    CanUserSort="False"
                    ElementStyle="{StaticResource style}"
                    Header="份额" />
                <DataGridTextColumn
                    Binding="{Binding NetAsset, StringFormat=N2}"
                    CanUserSort="False"
                    ElementStyle="{StaticResource style}"
                    Header="净资产" />
                <DataGridTextColumn
                    Binding="{Binding Asset, StringFormat=N2}"
                    CanUserSort="False"
                    ElementStyle="{StaticResource style}"
                    Header="总资产" />
            </DataGrid.Columns>
        </DataGrid>


        <DockPanel
            Margin="0,0,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <DockPanel.Resources>
                <Style BasedOn="{StaticResource ButtonIconCircular}" TargetType="Button">
                    <Setter Property="Margin" Value="4,0" />
                </Style>
            </DockPanel.Resources>
            <Button
                hc:IconElement.Geometry="{StaticResource f.cloud-arrow-down}"
                local:HelpService.Help="从托管同步净值"
                local:HelpService.Placement="Left"
                Command="{Binding UpdateFromApiCommand}" />
            <Button
                hc:IconElement.Geometry="{StaticResource f.arrows-rotate}"
                local:HelpService.Help="重新解析估值表"
                local:HelpService.Offset="-15,5"
                Command="{Binding RefreshNetValuesCommand}" />
            <Button
                hc:IconElement.Geometry="{StaticResource f.file-export}"
                local:HelpService.Help="导出净值表"
                local:HelpService.Offset="10,0"
                Command="{Binding ExportNetValuesCommand}" />
        </DockPanel>
    </Grid>
</UserControl>
