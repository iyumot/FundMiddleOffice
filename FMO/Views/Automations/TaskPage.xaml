<UserControl
    x:Class="FMO.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mi="clr-namespace:FMO.Schedule;assembly=FMO.Schedule"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:TaskPageViewModel />
    </UserControl.DataContext>
    <DockPanel>
        <StackPanel Width="500" Margin="0,20,0,0">
            <ListBox
                BorderThickness="0"
                ItemsSource="{Binding Templates}"
                Style="{StaticResource ListBoxCustom}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <hc:UniformSpacingPanel
                            ChildWrapping="Wrap"
                            IsItemsHost="True"
                            Spacing="8"
                            VerticalSpacing="8" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Margin="10,0"
                            Command="{Binding DataContext.AddTaskCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                            CommandParameter="{Binding .}"
                            Content="{Binding Title}" />

                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <ListBox
            Margin="0"
            Padding="0"
            BorderThickness="0"
            ItemsSource="{Binding Tasks}"
            Style="{StaticResource ListBoxCustom}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <mi:MissionShellView />
                    <!--<ContentControl
                        Content="{Binding}"
                        ContentTemplateSelector="{StaticResource MissionTemplateSelector}"
                        DataContext="{Binding .}"
                        Template="{StaticResource AutomationViewTemplate}" />-->
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
