<UserControl
    x:Class="FMO.HomeValidationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:HomeValidationViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary Source="/Themes/ValidationTemplates.xaml" />
    </UserControl.Resources>

    <hc:UniformSpacingPanel Spacing="5" VerticalSpacing="5">

        <local:ValidationItemView
            DataContext="{Binding ClearDateMissing.View}"
            Header="基金已清盘，但是未设置清盘日期"
            TipTemplate="{StaticResource ClearDateMissing}" />

        <local:ValidationItemView
            DataContext="{Binding DailyMissing.View}"
            Header="基金净值缺失"
            TipTemplate="{StaticResource DailyMissing}" />


        <local:ValidationItemView
            DataContext="{Binding ShareNotPair.View}"
            Header="基金份额不匹配"
            TipTemplate="{StaticResource ShareNotPairRule}" />
    </hc:UniformSpacingPanel>
</UserControl>
