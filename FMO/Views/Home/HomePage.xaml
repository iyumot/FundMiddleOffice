<UserControl
    x:Class="FMO.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    Background="Transparent"
    KeyDown="UserControl_KeyDown"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:HomePageViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <local:OADateConverter x:Key="OADateConverter" />
        <local:ScaleNumberConverter x:Key="ScaleNumberConverter" />

        <ControlTemplate x:Key="CustomTrackerTemplate" TargetType="ContentControl">
            <oxy:TrackerControl
                Background="Transparent"
                BorderThickness="0"
                Position="{Binding Position}">
                <oxy:TrackerControl.Content>
                    <Border
                        Padding="12,10,12,10"
                        Background="#1e1e2e"
                        BorderBrush="#6c7086"
                        BorderThickness="1"
                        CornerRadius="6">
                        <StackPanel>
                            <!--  数据区域  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    Foreground="#a6adc8"
                                    Text="日期:" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Foreground="#cdd6f4"
                                    Text="{Binding DataPoint.X, Converter={StaticResource OADateConverter}, StringFormat=yyyy/MM}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,4,8,0"
                                    Foreground="#a6adc8"
                                    Text="金额:" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="#a6e3a1"
                                    Text="{Binding DataPoint.Y, Converter={StaticResource ScaleNumberConverter}, ConverterParameter=10000}" />
                            </Grid>

                        </StackPanel>
                    </Border>
                </oxy:TrackerControl.Content>
            </oxy:TrackerControl>
        </ControlTemplate>

        <Style x:Key="ToggleButton.HyperlinkLike" TargetType="ToggleButton">
            <!--  基础样式设置  -->
            <Setter Property="Foreground" Value="#0066CC" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="2,0,2,0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <!--  使用附加属性设置文本装饰  -->
            <Setter Property="TextBlock.TextDecorations" Value="Underline" />

            <!--  模板定义  -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                            <hc:SimplePanel x:Name="content">
                                <ContentPresenter
                                    Margin="5,0"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Content="{TemplateBinding Content}"
                                    ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}" />

                                <Line
                                    VerticalAlignment="Bottom"
                                    Stroke="{TemplateBinding Foreground}"
                                    X1="0"
                                    X2="{Binding ElementName=content, Path=ActualWidth}" />
                            </hc:SimplePanel>
                        </Border>

                        <!--  触发器定义 - 处理交互状态  -->
                        <ControlTemplate.Triggers>
                            <!--  按下状态  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#001166" />
                            </Trigger>

                            <!--  选中状态  -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#800080" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>

                            <!--  禁用状态  -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#999999" />
                                <Setter Property="Cursor" Value="Arrow" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <hc:SimplePanel>
        <DockPanel>

            <StackPanel Width="888" Panel.ZIndex="111">



                <oxy:PlotView
                    Height="300"
                    shared:MaskService.BlurRadius="40"
                    shared:MaskService.IsMask="True"
                    Model="{Binding ManageScaleContext}">
                    <oxy:PlotView.TrackerDefinitions>
                        <oxy:TrackerDefinition TrackerKey="CustomTracker" TrackerTemplate="{StaticResource CustomTrackerTemplate}" />
                    </oxy:PlotView.TrackerDefinitions>
                </oxy:PlotView>


                <!--<hc:UniformSpacingPanel Spacing="8">
                <oxy:PlotView
                    Width="200"
                    Height="200"
                    Model="{Binding BuySellIn7DaysContext}" />


            </hc:UniformSpacingPanel>-->


            </StackPanel>



            <GroupBox
                DockPanel.Dock="Top"
                Header="常用工具"
                Style="{StaticResource GroupBoxTab}">
                <DockPanel LastChildFill="False">

                    <!--<Button
                    hc:IconElement.Geometry="{StaticResource f.arrows-split-up-and-left}"
                    Command="{Binding RefreshPlotCommand}"
                    Content="数据文件夹"
                    Style="{StaticResource ButtonIcon}" />-->

                    <Button
                        hc:IconElement.Geometry="{StaticResource f.folder}"
                        Command="{Binding OpenDataFolderCommand}"
                        Content="数据文件夹"
                        Style="{StaticResource ButtonIcon}" />


                    <hc:SimplePanel>
                        <Button
                            hc:IconElement.Geometry="{StaticResource f.hard-drive}"
                            Command="{Binding BackupCommand}"
                            Content="备份"
                            Style="{StaticResource ButtonIcon}"
                            Visibility="{Binding BackupCommand.IsRunning, Converter={StaticResource Boolean2VisibilityReConverter}}" />

                        <!--<DockPanel HorizontalAlignment="Center">
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Text="%" />
                        <TextBlock
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Bottom"
                            FontSize="9"
                            Text="{Binding BackupProcess2, StringFormat=N0}" />
                        <TextBlock Text="{Binding BackupProcess, StringFormat={}{0:N0}.}" />
                    </DockPanel>-->

                        <hc:CircleProgressBar
                            Width="36"
                            Height="36"
                            Margin="-8"
                            Text="{Binding Value, RelativeSource={RelativeSource Self}, StringFormat=N0}"
                            Visibility="{Binding BackupCommand.IsRunning, Converter={StaticResource Boolean2VisibilityConverter}}"
                            Value="{Binding BackupProcess}" />
                    </hc:SimplePanel>


                    <Button
                        hc:IconElement.Geometry="{StaticResource f.database}"
                        Command="{Binding OpenDbViewerCommand}"
                        Style="{StaticResource ButtonIcon}" />


                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsPanel="{StaticResource WrapHorizontalItemsPanelTemplate}"
                        ItemsSource="{Binding Tools}"
                        Style="{StaticResource ListBoxCustom}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    hc:IconElement.Geometry="{Binding Icon}"
                                    Command="{Binding DataContext.OpenExeCommand, RelativeSource={RelativeSource AncestorType=local:HomePage}}"
                                    CommandParameter="{Binding ExeName}"
                                    Foreground="{Binding Foreground}"
                                    Style="{StaticResource ButtonIcon}"
                                    ToolTip="{Binding ToolTip}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </GroupBox>


            <hc:UniformSpacingPanel
                Margin="5,30"
                DockPanel.Dock="Top"
                Orientation="Vertical">

                <!--  近期申赎情况  -->
                <ContentControl Content="{Binding BuySellNearDaysViewModel}" Visibility="{Binding BuySellIn7DaysContext, Converter={StaticResource Object2VisibilityConverter}}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <hc:SimplePanel>
                                <hc:UniformSpacingPanel>
                                    <TextBlock FontWeight="Bold" Text="近7日认申购" />
                                    <ToggleButton
                                        x:Name="vbuy"
                                        Content="{Binding BuySource.View.Count}"
                                        Style="{StaticResource ToggleButton.HyperlinkLike}" />
                                    <TextBlock Text="笔" />


                                    <TextBlock
                                        Margin="10,0,0,0"
                                        FontWeight="Bold"
                                        Text="赎回" />
                                    <ToggleButton
                                        x:Name="vsell"
                                        Content="{Binding SellSource.View.Count}"
                                        Style="{StaticResource ToggleButton.HyperlinkLike}" />
                                    <TextBlock Text="笔" />


                                    <TextBlock
                                        Margin="10,0,0,0"
                                        FontWeight="Bold"
                                        Text="未交收" />
                                    <ToggleButton
                                        x:Name="vun"
                                        Content="{Binding UnsettledSource.View.Count}"
                                        Style="{StaticResource ToggleButton.HyperlinkLike}" />
                                    <TextBlock Text="笔" />
                                </hc:UniformSpacingPanel>

                                <Popup
                                    AllowsTransparency="True"
                                    IsOpen="{Binding ElementName=vbuy, Path=IsChecked}"
                                    StaysOpen="False">
                                    <Border>
                                        <DataGrid
                                            AutoGenerateColumns="False"
                                            ItemsSource="{Binding BuySource.View}"
                                            Style="{StaticResource DataGrid.NoSelect}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                                                <DataGridTextColumn Binding="{Binding RequestDate, StringFormat=yyyy-MM-dd}" Header="日期" />
                                                <DataGridTextColumn Binding="{Binding FundName}" Header="基金" />
                                                <DataGridTextColumn Binding="{Binding InvestorName}" Header="投资人" />
                                                <DataGridTextColumn Binding="{Binding RequestType}" Header="类型" />
                                                <DataGridTextColumn Binding="{Binding RequestAmount}" Header="金额" />
                                                <DataGridTextColumn Binding="{Binding RequestShare}" Header="份额" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Border>
                                </Popup>
                                <Popup
                                    AllowsTransparency="True"
                                    IsOpen="{Binding ElementName=vsell, Path=IsChecked}"
                                    StaysOpen="False">
                                    <Border>
                                        <DataGrid
                                            AutoGenerateColumns="False"
                                            ItemsSource="{Binding SellSource.View}"
                                            Style="{StaticResource DataGrid.NoSelect}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                                                <DataGridTextColumn Binding="{Binding RequestDate, StringFormat=yyyy-MM-dd}" Header="日期" />
                                                <DataGridTextColumn Binding="{Binding FundName}" Header="基金" />
                                                <DataGridTextColumn Binding="{Binding InvestorName}" Header="投资人" />
                                                <DataGridTextColumn Binding="{Binding RequestType}" Header="类型" />
                                                <DataGridTextColumn Binding="{Binding RequestAmount}" Header="金额" />
                                                <DataGridTextColumn Binding="{Binding RequestShare}" Header="份额" />
                                                <DataGridCheckBoxColumn Binding="{Binding IsSettled}" Header="交收" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Border>
                                </Popup>
                                <Popup
                                    AllowsTransparency="True"
                                    IsOpen="{Binding ElementName=vun, Path=IsChecked}"
                                    StaysOpen="False">
                                    <Border>
                                        <DataGrid
                                            AutoGenerateColumns="False"
                                            ItemsSource="{Binding UnsettledSource.View}"
                                            Style="{StaticResource DataGrid.NoSelect}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                                                <DataGridTextColumn Binding="{Binding RequestDate, StringFormat=yyyy-MM-dd}" Header="日期" />
                                                <DataGridTextColumn Binding="{Binding FundName}" Header="基金" />
                                                <DataGridTextColumn Binding="{Binding InvestorName}" Header="投资人" />
                                                <DataGridTextColumn Binding="{Binding RequestType}" Header="类型" />
                                                <DataGridTextColumn Binding="{Binding RequestAmount}" Header="金额" />
                                                <DataGridTextColumn Binding="{Binding RequestShare}" Header="份额" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Border>
                                </Popup>
                            </hc:SimplePanel>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding BuySource.View.Count}" Value="0">
                                    <Setter TargetName="vbuy" Property="IsHitTestVisible" Value="False" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding SellSource.View.Count}" Value="0">
                                    <Setter TargetName="vsell" Property="IsHitTestVisible" Value="False" />
                                </DataTrigger>

                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </hc:UniformSpacingPanel>

            <local:HomeValidationView Margin="0,10" DockPanel.Dock="Top" />

            <WrapPanel Margin="0,10,0,0">



                <Border BorderBrush="AliceBlue" BorderThickness="1">
                    <ContentControl Content="{Binding RaisingAccountTip}">
                        <ContentControl.ContentTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <DockPanel.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DockPanel.Resources>
                                    <DockPanel Name="info" DockPanel.Dock="Top">
                                        <TextBlock Text="募集户余额：" />
                                        <TextBlock Name="b" Text="{Binding TotalBalance, TargetNullValue=未获取}" />
                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.rotate}"
                                            Command="{Binding UpdateCommand}"
                                            Style="{StaticResource ButtonIcon.Small}" />
                                    </DockPanel>

                                    <Popup
                                        Name="pop"
                                        AllowsTransparency="True"
                                        Placement="Bottom"
                                        PlacementTarget="{Binding ElementName=info}">
                                        <Border Background="White">
                                            <StackPanel>
                                                <ListBox ItemsSource="{Binding BalanceDetail}" Style="{StaticResource ListBoxCustom}">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <DockPanel>
                                                                <TextBlock
                                                                    Width="80"
                                                                    Text="{Binding Value}"
                                                                    TextAlignment="Center" />
                                                                <TextBlock Text="{Binding Key}" />
                                                            </DockPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>

                                                <TextBlock Text="失败列表" Visibility="{Binding HasFailed, Converter={StaticResource Boolean2VisibilityConverter}}" />

                                                <ListBox
                                                    ItemsSource="{Binding FailedFunds}"
                                                    Style="{StaticResource ListBoxCustom}"
                                                    Visibility="{Binding HasFailed, Converter={StaticResource Boolean2VisibilityConverter}}">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Margin="3" Text="{Binding .}" />
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </StackPanel>
                                        </Border>
                                    </Popup>
                                </DockPanel>
                                <DataTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="pop" Property="IsOpen" Value="True" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding HasFailed}" Value="True">
                                        <Setter TargetName="b" Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                    </ContentControl>
                </Border>


            </WrapPanel>

        </DockPanel>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Gray"
            Opacity="0.5"
            Visibility="{Binding IsInitializing, Converter={StaticResource Boolean2VisibilityConverter}}">
            <Run FontSize="150" Text="加载中" />
            <LineBreak />
            <Run
                BaselineAlignment="Center"
                FontSize="22"
                Text="{Binding InitializeMesage}" />
        </TextBlock>
    </hc:SimplePanel>
</UserControl>
