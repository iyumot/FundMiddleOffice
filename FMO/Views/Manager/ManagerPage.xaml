<UserControl
    x:Class="FMO.ManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    d:DataContext="{d:DesignInstance Type=local:ManagerPageViewModel}"
    d:DesignHeight="950"
    d:DesignWidth="1200"
    Tag="管理人"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FMO.Shared;component/Themes/NewFileControl.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="RightAlignText" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="TextAlignment" Value="Right" />
            </Style>

            <SolidColorBrush x:Key="LabelBrush">Gray</SolidColorBrush>

            <Style BasedOn="{StaticResource {x:Type shared:ChangeableControl}}" TargetType="shared:ChangeableControl">
                <Setter Property="Entity" Value="{Binding RelativeSource={RelativeSource AncestorType=local:ManagerPage}, Path=DataContext}" />
                <Setter Property="IsReadOnly" Value="{Binding RelativeSource={RelativeSource AncestorType=local:ManagerPage}, Path=DataContext.IsReadOnly}" />
            </Style>

            <DataTemplate x:Key="DT.Text.Cap">
                <TextBox MinWidth="80" Text="{Binding NewValue, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
            </DataTemplate>

            <DataTemplate x:Key="DT.Person" DataType="local:PersonViewModel">
                <StackPanel DataContext="{Binding OldValue}">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Width" Value="60" />
                        </Style>
                    </StackPanel.Resources>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="姓名" />
                        </BulletDecorator.Bullet>
                        <shared:CopyableTextBlock Text="{Binding Name}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="证件类型" />
                        </BulletDecorator.Bullet>
                        <shared:CopyableTextBlock Text="{Binding IDType}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="证件号" />
                        </BulletDecorator.Bullet>
                        <shared:CopyableTextBlock IsMasked="True" Text="{Binding Id}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="电话" />
                        </BulletDecorator.Bullet>
                        <shared:CopyableTextBlock Text="{Binding Phone}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="Email" />
                        </BulletDecorator.Bullet>
                        <shared:CopyableTextBlock Text="{Binding Email}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="地址" />
                        </BulletDecorator.Bullet>
                        <shared:CopyableTextBlock Text="{Binding Address}" />
                    </BulletDecorator>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="DT.Person.Edit" DataType="local:PersonViewModel">
                <StackPanel DataContext="{Binding NewValue}">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Width" Value="50" />
                        </Style>
                    </StackPanel.Resources>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="姓名" />
                        </BulletDecorator.Bullet>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="证件类型" />
                        </BulletDecorator.Bullet>
                        <TextBox Text="{Binding IDType, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="证件号" />
                        </BulletDecorator.Bullet>
                        <TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="电话" />
                        </BulletDecorator.Bullet>
                        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                    </BulletDecorator>

                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="Email" />
                        </BulletDecorator.Bullet>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                    </BulletDecorator>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="地址" />
                        </BulletDecorator.Bullet>
                        <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                    </BulletDecorator>
                </StackPanel>
            </DataTemplate>

        </ResourceDictionary>

    </UserControl.Resources>
    <UserControl.DataContext>
        <local:ManagerPageViewModel />
    </UserControl.DataContext>
    <DockPanel>

        <Grid Width="450" Margin="0,10">
            <StackPanel TextElement.FontSize="13">
                <StackPanel.Resources>
                    <Style TargetType="ContentControl">
                        <Setter Property="Margin" Value="0,3" />
                    </Style>
                </StackPanel.Resources>

                <shared:ChangeableControl Binding="{Binding ManagerName}" />



                <UniformGrid Margin="0,0,30,0" Columns="2">
                    <shared:ChangeableControl Binding="{Binding ArtificialPerson}" />
                    <shared:ChangeableControl Binding="{Binding RegisterNo}" IsReadOnly="True" />


                    <shared:ChangeableControl Binding="{Binding RegisterCapital}" EditTemplate="{StaticResource DT.Text.Cap}" />
                    <shared:ChangeableControl Binding="{Binding RealCapital}" EditTemplate="{StaticResource DT.Text.Cap}" />


                    <shared:ChangeableControl HorizontalContentAlignment="Left" Binding="{Binding SetupDate}">
                        <shared:ChangeableControl.EditTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding NewValue}" />
                            </DataTemplate>
                        </shared:ChangeableControl.EditTemplate>
                    </shared:ChangeableControl>


                    <shared:ChangeableControl HorizontalContentAlignment="Left" Binding="{Binding ExpireDate}">
                        <shared:ChangeableControl.EditTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <DatePicker
                                        Width="110"
                                        SelectedDate="{Binding NewValue.Date}"
                                        Visibility="{Binding NewValue.IsLongTerm, Converter={StaticResource Boolean2VisibilityReConverter}}" />
                                    <CheckBox
                                        Margin="8,0"
                                        Content="至今"
                                        IsChecked="{Binding NewValue.IsLongTerm}" />
                                </DockPanel>
                            </DataTemplate>
                        </shared:ChangeableControl.EditTemplate>
                    </shared:ChangeableControl>

                    <shared:ChangeableControl Binding="{Binding RegisterDate}">
                        <shared:ChangeableControl.EditTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding NewValue}" />
                            </DataTemplate>
                        </shared:ChangeableControl.EditTemplate>
                    </shared:ChangeableControl>
                    <TextBlock />


                    <shared:ChangeableControl Binding="{Binding Telephone}" EditTemplate="{StaticResource DT.Text.Cap}" />
                    <shared:ChangeableControl Binding="{Binding Fax}" EditTemplate="{StaticResource DT.Text.Cap}" />


                </UniformGrid>

                <DockPanel>

                    <shared:ChangeableControl Binding="{Binding WebSite}" />

                    <Button
                        hc:IconElement.Geometry="{StaticResource f.arrow-up-right-from-square}"
                        Command="{Binding OpenLinkCommand}"
                        Foreground="{StaticResource PrimaryBrush}"
                        Style="{StaticResource ButtonIcon.Small}" />
                </DockPanel>

                <shared:ChangeableControl Binding="{Binding InstitutionCode}" IsReadOnly="True" />


                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding RegisterAddress}" />
                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding OfficeAddress}" />
                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding BusinessScope}">
                    <shared:ChangeableControl.EditTemplate>
                        <DataTemplate>
                            <TextBox
                                MinHeight="100"
                                AcceptsReturn="True"
                                Text="{Binding NewValue, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </shared:ChangeableControl.EditTemplate>
                </shared:ChangeableControl>


                <!--  logo  -->
                <GroupBox Header="Logo" Style="{StaticResource GroupBoxTab}">
                    <DockPanel shared:MaskService.IsMask="True">
                        <Grid
                            AllowDrop="True"
                            Background="Transparent"
                            Drop="Grid_Drop">
                            <Image
                                Width="64"
                                Height="64"
                                Source="{Binding MainLogo}" />

                            <TextBlock Text="Logo" Visibility="{Binding MainLogo, Converter={StaticResource Object2VisibilityReConverter}}" />
                        </Grid>
                        <Image />
                    </DockPanel>
                </GroupBox>


                <GroupBox
                    Margin="0,20,0,0"
                    local:HelpService.Help="可以设置多个文件，保存历史证件"
                    local:HelpService.Placement="Bottom"
                    Background="WhiteSmoke"
                    Header="证件"
                    Style="{StaticResource GroupBoxTab}">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource MultiDualFileStyle}" TargetType="shared:FileView">
                                <Setter Property="IsReadOnly" Value="{Binding IsReadOnly}" />
                                <Setter Property="ContentTemplate" Value="{StaticResource MultiDualFile.Flip}" />
                                <Setter Property="Margin" Value="0,1" />
                            </Style>
                        </StackPanel.Resources>
                        <shared:FileView Content="{Binding BusinessLicense}" Header="营业执照正本" />
                        <shared:FileView Content="{Binding BusinessLicense2}" Header="营业执照副本" />
                        <shared:FileView Content="{Binding AccountOpeningLicense}" Header="开户许可证" />
                        <shared:FileView Content="{Binding CharterDocument}" Header="章程/合伙协议" />
                        <shared:FileView Content="{Binding LegalPersonIdCard}" Header="法人身份证" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                <ToggleButton
                    Width="22"
                    hc:IconElement.Geometry="{StaticResource f.pencil}"
                    local:HelpService.Help="点击这里修改管理人资料和证件"
                    local:HelpService.Placement="Left"
                    BorderThickness="0"
                    DockPanel.Dock="Right"
                    IsChecked="{Binding IsReadOnly}"
                    Style="{StaticResource EditSwitch}">
                    <!--<local:HelpService.Help>
                        <DataTemplate>
                            <TextBlock Text="点击这里修改管理人资料和证件" />
                        </DataTemplate>
                    </local:HelpService.Help>-->
                </ToggleButton>

                <Button
                    Height="50"
                    Margin="0,10"
                    Command="{Binding OpenAmacPageCommand}">
                    <TextBlock
                        MaxWidth="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="公示信息"
                        TextWrapping="Wrap" />
                </Button>
            </StackPanel>
        </Grid>

        <StackPanel Margin="5,0">

            <StackPanel>
                <Border>
                    <DockPanel LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="成员" />
                        <Button
                            hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                            local:HelpService.Help="添加公司成员"
                            local:HelpService.Placement="Top"
                            Command="{Binding AddMemberCommand}"
                            Foreground="Green"
                            Style="{StaticResource ButtonIcon}" />

                        <hc:SimplePanel>
                            <hc:LoadingCircle
                                Width="24"
                                Height="24"
                                DotDiameter="3"
                                Visibility="{Binding LoadMemberFromAmacCommand.IsRunning, Converter={StaticResource Boolean2VisibilityConverter}}" />
                            <Button
                                hc:IconElement.Geometry="{StaticResource f.download}"
                                local:HelpService.Help="从协会human下载"
                                local:HelpService.Placement="Right"
                                Command="{Binding LoadMemberFromAmacCommand}"
                                Style="{StaticResource ButtonIcon}"
                                ToolTip="从协会更新" />
                        </hc:SimplePanel>
                    </DockPanel>
                </Border>

                <DataGrid
                    Name="memberList"
                    d:ItemsSource="{d:SampleData}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding MemberSource.View}"
                    Style="{StaticResource DataGrid.NoSelect}">
                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Border Background="LightGreen">
                                <hc:UniformSpacingPanel
                                    MaxWidth="450"
                                    Margin="5,0,0,0"
                                    ChildWrapping="Wrap"
                                    Spacing="4"
                                    VerticalSpacing="4">
                                    <BulletDecorator>
                                        <BulletDecorator.Bullet>
                                            <TextBlock Width="70" Text="Email" />
                                        </BulletDecorator.Bullet>
                                        <shared:CopyableTextBlock Text="{Binding Email}" />
                                    </BulletDecorator>

                                    <BulletDecorator>
                                        <BulletDecorator.Bullet>
                                            <TextBlock Width="70" Text="职位" />
                                        </BulletDecorator.Bullet>
                                        <shared:CopyableTextBlock Text="{Binding Post}" />
                                    </BulletDecorator>

                                    <BulletDecorator>
                                        <BulletDecorator.Bullet>
                                            <TextBlock Width="70" Text="从业证书" />
                                        </BulletDecorator.Bullet>
                                        <shared:CopyableTextBlock Text="{Binding CertCode}" />
                                    </BulletDecorator>
                                </hc:UniformSpacingPanel>
                            </Border>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="姓名">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="证件号">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock IsMasked="True" Text="{Binding Identity.Id}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="电话">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock Text="{Binding Phone}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTemplateColumn Header="证件">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <Button
                                            Margin="-5"
                                            hc:IconElement.Geometry="{DynamicResource f.book-open-reader}"
                                            Command="{Binding ViewCommand}"
                                            Foreground="Lime"
                                            Style="{DynamicResource ButtonIcon.Small}"
                                            ToolTip="查看"
                                            Visibility="{Binding IdFile, TargetNullValue=Collapsed, Converter={StaticResource FileExistsToVisibilityConverter}}" />

                                        <Button
                                            Margin="0"
                                            hc:IconElement.Geometry="{DynamicResource f.gear}"
                                            Command="{Binding SetFileCommand}"
                                            CommandParameter="{Binding .}"
                                            Style="{DynamicResource ButtonIcon.Small}"
                                            ToolTip="更换" />

                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>



                        <!--  编辑/删除  -->
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.circle-minus}"
                                            Command="{Binding DataContext.RemoveMemberCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding .}"
                                            Foreground="Red"
                                            Style="{StaticResource ButtonIcon.Small}" />


                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.pen}"
                                            Command="{Binding DataContext.EditMemberCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource ButtonIcon.Small}" />
                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>


                <Popup
                    IsOpen="{Binding ShowMemberPopup}"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=memberList}"
                    StaysOpen="False">
                    <Border MaxWidth="600" Background="WhiteSmoke">
                        <local:ManagerMemberView Margin="0,5" DataContext="{Binding MemberContext}" />
                    </Border>
                </Popup>
            </StackPanel>


            <!--  股权结构  -->
            <StackPanel>
                <Border>
                    <DockPanel LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="股东" />


                        <TextBlock
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Foreground="Red"
                            Text="股东认缴和注册资本不一致"
                            Visibility="{Binding ShareNotPair, Converter={StaticResource Boolean2VisibilityConverter}}" />

                        <Button
                            hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                            local:HelpService.Help="添加股东"
                            local:HelpService.Placement="Right"
                            Command="{Binding AddShareHolderCommand}"
                            Foreground="Green"
                            Style="{StaticResource ButtonIcon}" />


                        <!--<Button
                            hc:IconElement.Geometry="{StaticResource f.dharmachakra}"
                            Command="{Binding OpenOwnershipCommand}"
                            Style="{StaticResource ButtonIcon}"
                            ToolTip="股权结构图" />-->
                    </DockPanel>
                </Border>

                <DataGrid
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding ShareRelations}"
                    Style="{StaticResource DataGrid.NoSelect}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="姓名">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock
                                        local:HelpService.Help="双击修改股东资料"
                                        local:HelpService.Placement="Bottom"
                                        Text="{Binding Holder.Name}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDoubleClick">
                                                <i:InvokeCommandAction Command="{Binding OpenEntityCommand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </shared:CopyableTextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="认缴金额">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <shared:CopyableTextBlock HorizontalAlignment="Right" Text="{Binding Share}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn
                            Binding="{Binding Ratio, StringFormat=P2}"
                            ElementStyle="{StaticResource RightAlignText}"
                            Header="占比" />

                        <!--  编辑/删除  -->
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.circle-minus}"
                                            Command="{Binding DataContext.RemoveShareHolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding .}"
                                            Foreground="Red"
                                            Style="{StaticResource ButtonIcon.Small}" />


                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.pen}"
                                            Command="{Binding DataContext.EditShareHolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource ButtonIcon.Small}" />
                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

        </StackPanel>


        <TabControl BorderThickness="0" Style="{StaticResource TabControlCapsule}">

            <TabItem Width="100" Style="{StaticResource TabItemCapsuleHorizontalFirst}">
                <TabItem.Header>
                    <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                        <TextBlock VerticalAlignment="Center" Text="制度" />
                        <ToggleButton
                            Width="16"
                            Height="16"
                            Margin="8,0"
                            Padding="1"
                            IsChecked="{Binding IsPolicyReadOnly}"
                            Style="{StaticResource EditSwitch.Small}" />
                        <ToggleButton
                            Margin="-4"
                            hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                            BorderThickness="0"
                            Foreground="RoyalBlue"
                            IsChecked="{Binding IsAddingNewPolicy}"
                            Style="{StaticResource ToggleButtonIcon.Small}"
                            Visibility="{Binding IsPolicyReadOnly, Converter={StaticResource Boolean2VisibilityReConverter}}" />

                        <Popup
                            AllowsTransparency="True"
                            HorizontalOffset="-100"
                            IsOpen="{Binding IsAddingNewPolicy}"
                            Placement="Bottom"
                            PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=TabItem}}"
                            StaysOpen="False">
                            <Border Background="WhiteSmoke">
                                <DockPanel Margin="10">
                                    <Button
                                        Command="{Binding AddPolicyDocCommand}"
                                        Content="确认"
                                        DockPanel.Dock="Right"
                                        Style="{StaticResource ButtonPrimary}" />
                                    <TextBlock VerticalAlignment="Center" Text="制度名" />
                                    <TextBox
                                        Width="220"
                                        Margin="10,0"
                                        Text="{Binding NewPolicyName, UpdateSourceTrigger=PropertyChanged, Delay=200}" />
                                </DockPanel>
                            </Border>
                        </Popup>
                    </DockPanel>
                </TabItem.Header>
                <ListBox
                    BorderThickness="0"
                    ItemsSource="{Binding PolicyDocuments}"
                    Style="{StaticResource ListBoxCustom}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <shared:FileView
                                Margin="4,2"
                                Content="{Binding}"
                                Header="{Binding Label}"
                                IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=local:ManagerPage}, Path=DataContext.IsPolicyReadOnly}"
                                Style="{StaticResource MultiDualFileStyle}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

            <TabItem Width="100" Style="{StaticResource TabItemCapsuleHorizontalLast}">
                <TabItem.Header>
                    <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                        <TextBlock VerticalAlignment="Center" Text="工作" />
                        <Button
                            Margin="-2"
                            hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                            Command="{Binding AddFlowCommand}"
                            Foreground="RoyalBlue"
                            Style="{StaticResource ButtonIcon}" />
                    </DockPanel>
                </TabItem.Header>
                <DockPanel>

                    <ListBox
                        BorderThickness="0"
                        ItemsSource="{Binding Flows}"
                        Style="{StaticResource ListBoxCustom}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <UniformGrid
                                        VerticalAlignment="Top"
                                        Columns="1"
                                        DockPanel.Dock="Right">
                                        <ToggleButton IsChecked="{Binding IsReadOnly}" Style="{StaticResource EditSwitch}" />
                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.trash}"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=DataContext.DeleteFlowCommand}"
                                            CommandParameter="{Binding .}"
                                            Foreground="Red"
                                            Style="{StaticResource ButtonIcon}"
                                            Visibility="{Binding IsReadOnly, Converter={StaticResource Boolean2VisibilityReConverter}}" />
                                    </UniformGrid>


                                    <shared:ChangeableControl
                                        MinWidth="500"
                                        HorizontalContentAlignment="Stretch"
                                        Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged, Delay=200}"
                                        DockPanel.Dock="Bottom"
                                        Entity="{Binding .}"
                                        IsReadOnly="{Binding IsReadOnly}" />

                                    <shared:ChangeableControl
                                        Binding="{Binding Date}"
                                        Entity="{Binding .}"
                                        IsReadOnly="{Binding IsReadOnly}">
                                        <shared:ChangeableControl.EditTemplate>
                                            <DataTemplate>
                                                <DatePicker Width="100" SelectedDate="{Binding NewValue, Converter={StaticResource DataTimeDateOnlySwitchConverter}}" />
                                            </DataTemplate>
                                        </shared:ChangeableControl.EditTemplate>
                                    </shared:ChangeableControl>

                                    <DockPanel
                                        AllowDrop="True"
                                        DockPanel.Dock="Right"
                                        Visibility="{Binding IsTemple, Converter={StaticResource Boolean2VisibilityReConverter}}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Drop">
                                                <i:InvokeCommandAction Command="{Binding AddSealedFileCommand}" PassEventArgsToCommand="True" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <TextBlock VerticalAlignment="Center" Text="用印文件" />
                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.folder}"
                                            Command="{Binding OpenSealedCommand}"
                                            Style="{StaticResource ButtonIcon}" />
                                    </DockPanel>

                                    <DockPanel
                                        AllowDrop="True"
                                        DockPanel.Dock="Right"
                                        Visibility="{Binding IsTemple, Converter={StaticResource Boolean2VisibilityReConverter}}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Drop">
                                                <i:InvokeCommandAction Command="{Binding AddNormalFileCommand}" PassEventArgsToCommand="True" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <TextBlock VerticalAlignment="Center" Text="原始文件" />
                                        <Button
                                            hc:IconElement.Geometry="{StaticResource f.folder}"
                                            Command="{Binding OpenNormalCommand}"
                                            Style="{StaticResource ButtonIcon}" />
                                    </DockPanel>



                                    <shared:ChangeableControl
                                        HorizontalContentAlignment="Stretch"
                                        Binding="{Binding Title, UpdateSourceTrigger=PropertyChanged, Delay=200}"
                                        Entity="{Binding .}"
                                        IsReadOnly="{Binding IsReadOnly}" />


                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </TabItem>
        </TabControl>





    </DockPanel>
</UserControl>
