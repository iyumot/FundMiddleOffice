<Window
    x:Class="FMO.AddTAWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="添加TA记录"
    Width="500"
    Height="450"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:AddTAWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <StackPanel Margin="10">

        <!--  产品列表  -->
        <ComboBox
            HorizontalContentAlignment="Center"
            hc:InfoElement.Placeholder="产品"
            DisplayMemberPath="Name"
            IsEditable="True"
            IsTextSearchEnabled="False"
            ItemsSource="{Binding FundSource.View}"
            KeyDown="ComboBox_KeyDown"
            MouseDown="ComboBox_MouseDown"
            SelectedIndex="-1"
            SelectedItem="{Binding SelectedFund}"
            Text="{Binding SearchFundKey, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged, Delay=200}">
            <!--<ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>-->
        </ComboBox>


        <!--  投资人列表  -->
        <ComboBox
            Margin="0,4"
            HorizontalContentAlignment="Center"
            DisplayMemberPath="Name"
            IsEditable="True"
            IsTextSearchEnabled="False"
            ItemsSource="{Binding InvestorSource.View}"
            KeyDown="ComboBox_KeyDown"
            MouseDown="ComboBox_MouseDown"
            SelectedIndex="-1"
            SelectedItem="{Binding SelectedInvestor}"
            Text="{Binding SearchInvestorKey, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged, Delay=200}" />

        <DockPanel>
            <TextBlock
                Width="60"
                VerticalAlignment="Center"
                Text="申请日期" />

            <DatePicker Width="100" SelectedDate="{Binding ConfirmDate}" />

            <ListBox
                ItemsPanel="{StaticResource WrapHorizontalItemsPanelTemplate}"
                ItemsSource="{Binding Types}"
                SelectedItem="{Binding SelectedType}" />

            <!--  申请金额/份额  -->
            <TextBox Text="{Binding RequestNumber}" Visibility="{Binding ShowRequestNumber, Converter={StaticResource Boolean2VisibilityConverter}}" />
        </DockPanel>

        <DockPanel Margin="0,4">
            <TextBlock
                Width="60"
                VerticalAlignment="Center"
                Text="确认日期" />

            <DatePicker Width="100" SelectedDate="{Binding ConfirmDate}" />

            <Grid>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="份额" />

                <TextBox Grid.Column="1" Text="{Binding ConfirmShare}" />

                <TextBlock Grid.Column="2" Text="金额" />

                <TextBox Grid.Column="3" Text="{Binding ConfirmAmount}" />


            </Grid>


        </DockPanel>






    </StackPanel>
</Window>
