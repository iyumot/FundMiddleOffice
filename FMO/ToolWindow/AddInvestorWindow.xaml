<Window
    x:Class="FMO.AddInvestorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="添加投资人"
    Width="600"
    Height="130"
    d:DataContext="{d:DesignInstance Type=local:AddInvestorWindowViewModel}"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Width" Value="50" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,5,0" />
        </Style>
    </Window.Resources>
    <DockPanel Margin="8">
        <Button
            Height="auto"
            Margin="5,0,0,0"
            VerticalAlignment="Stretch"
            Command="{Binding ConfirmCommand}"
            Content="确认"
            DockPanel.Dock="Right"
            Style="{StaticResource ButtonPrimary}" />



        <hc:UniformSpacingPanel Orientation="Vertical" VerticalSpacing="5">
            <DockPanel>
                <TextBlock Style="{StaticResource LabelText}" Text="名称" />
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=200}" />
            </DockPanel>

            <DockPanel>
                <DockPanel>
                    <TextBlock Style="{StaticResource LabelText}" Text="证件类型" />
                    <ComboBox
                        Width="120"
                        ItemsSource="{Binding IdTypes}"
                        SelectedItem="{Binding IdType}" />
                </DockPanel>


                <DockPanel>
                    <TextBlock Style="{StaticResource LabelText}" Text="证件号" />
                    <TextBox Text="{Binding IdNo, UpdateSourceTrigger=PropertyChanged, Delay=200}" />
                </DockPanel>
            </DockPanel>

            <TextBlock Foreground="Red" Text="{Binding Tip}" />
        </hc:UniformSpacingPanel>
    </DockPanel>
</Window>
