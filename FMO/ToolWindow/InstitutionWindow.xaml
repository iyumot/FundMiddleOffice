<Window
    x:Class="FMO.InstitutionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:comp="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    Title="编辑机构"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:InstitutionWindowViewModel}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="RightAlignText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Right" />
        </Style>

        <SolidColorBrush x:Key="LabelBrush">Gray</SolidColorBrush>

        <Style BasedOn="{StaticResource {x:Type shared:ChangeableControl}}" TargetType="shared:ChangeableControl">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock
                            Width="80"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource LabelBrush}"
                            Text="{Binding .}"
                            TextAlignment="Right" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Entity" Value="{Binding RelativeSource={RelativeSource AncestorType=local:InstitutionWindow}, Path=DataContext}" />
            <Setter Property="IsReadOnly" Value="{Binding RelativeSource={RelativeSource AncestorType=local:InstitutionWindow}, Path=DataContext.IsReadOnly}" />
        </Style>

        <DataTemplate x:Key="DT.Text.Cap">
            <TextBox MinWidth="80" Text="{Binding NewValue, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
        </DataTemplate>
        <DataTemplate x:Key="DT.File">

            <DockPanel Background="Transparent" LastChildFill="False">
                <hc:SimplePanel>
                    <DockPanel>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="RoyalBlue"
                            Text="{Binding Time, StringFormat=yyyy-MM-dd}" />
                        <shared:AbbreviationText
                            x:Name="file"
                            Margin="5,2"
                            VerticalContentAlignment="Center"
                            Text="{Binding Name}" />
                    </DockPanel>
                    <hc:SimplePanel
                        x:Name="p"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch"
                        Background="White"
                        Visibility="Collapsed">
                        <hc:SimplePanel.Resources>
                            <Style BasedOn="{StaticResource ButtonIcon.Small}" TargetType="Button">
                                <Setter Property="Margin" Value="2,-5" />
                            </Style>
                        </hc:SimplePanel.Resources>
                        <DockPanel Margin="5,2" LastChildFill="False">
                            <DockPanel LastChildFill="False">
                                <Button
                                    hc:IconElement.Geometry="{DynamicResource f.book-open-reader}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=shared:MultipleFileView}, Path=Binding.ViewCommand}"
                                    CommandParameter="{Binding .}"
                                    Foreground="Lime"
                                    ToolTip="查看" />

                                <Button
                                    hc:IconElement.Geometry="{DynamicResource f.clone}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=shared:MultipleFileView}, Path=Binding.CopyCommand}"
                                    CommandParameter="{Binding .}"
                                    Foreground="RoyalBlue"
                                    ToolTip="复制" />

                                <Button
                                    hc:IconElement.Geometry="{DynamicResource f.file-export}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=shared:MultipleFileView}, Path=Binding.SaveAsCommand}"
                                    CommandParameter="{Binding .}"
                                    ToolTip="另存为" />


                            </DockPanel>

                            <Button
                                Margin="-5"
                                hc:IconElement.Geometry="{DynamicResource f.xmark}"
                                Command="{Binding Binding.DeleteFileCommand, RelativeSource={RelativeSource AncestorType=shared:MultipleFileView}}"
                                CommandParameter="{Binding .}"
                                Foreground="Red"
                                Style="{DynamicResource ButtonIcon.Small}"
                                ToolTip="删除"
                                Visibility="{Binding DataContext.IsReadOnly, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource Boolean2VisibilityReConverter}}" />
                        </DockPanel>
                    </hc:SimplePanel>

                </hc:SimplePanel>
                <TextBlock
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="8"
                    Foreground="Red"
                    Text="文件已被删除"
                    Visibility="{Binding Exists, Converter={StaticResource Boolean2VisibilityReConverter}}" />

            </DockPanel>
            <DataTemplate.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Exists, TargetNullValue=False}" Value="True" />
                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="p" Property="Visibility" Value="Visible" />
                </MultiDataTrigger>

                <DataTrigger Binding="{Binding Exists, TargetNullValue=False}" Value="False">
                    <Setter TargetName="file" Property="Foreground" Value="Gray" />
                </DataTrigger>

            </DataTemplate.Triggers>
        </DataTemplate>
        <Style x:Key="CardFileStyle" TargetType="shared:MultipleFileView">

            <Setter Property="MaxHeight" Value="21" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="shared:MultipleFileView">
                        <Border>
                            <Border.Resources>
                                <CollectionViewSource x:Key="data" Source="{Binding Binding.Files, RelativeSource={RelativeSource TemplatedParent}}">
                                    <CollectionViewSource.SortDescriptions>
                                        <comp:SortDescription Direction="Descending" PropertyName="Time" />
                                    </CollectionViewSource.SortDescriptions>
                                </CollectionViewSource>
                            </Border.Resources>
                            <DockPanel Background="Transparent">
                                <TextBlock
                                    x:Name="lb"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource LabelBrush}"
                                    Text="{Binding Binding.Label, RelativeSource={RelativeSource TemplatedParent}}" />
                                <Grid>
                                    <Viewbox
                                        x:Name="arrow"
                                        Width="14"
                                        Height="14"
                                        Margin="2,0,8,0"
                                        VerticalAlignment="Center">
                                        <Path
                                            Data="{DynamicResource f.angle-right}"
                                            Fill="Black"
                                            Stroke="Black" />
                                    </Viewbox>

                                    <Button
                                        x:Name="add"
                                        hc:IconElement.Geometry="{DynamicResource f.gear}"
                                        Command="{Binding Binding.AddFileCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                        CommandParameter="{Binding ., RelativeSource={RelativeSource TemplatedParent}}"
                                        Style="{DynamicResource ButtonIcon.Small}"
                                        ToolTip="设置文件"
                                        Visibility="Hidden" />

                                </Grid>


                                <ListBox
                                    x:Name="list"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemTemplate="{StaticResource DT.File}"
                                    ItemsSource="{Binding Source={StaticResource data}}"
                                    Style="{DynamicResource ListBoxCustom}" />

                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsReadOnly" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="add" Property="Visibility" Value="Visible" />
                                <Setter TargetName="arrow" Property="Visibility" Value="Collapsed" />
                            </MultiTrigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                BeginTime="0:0:0"
                                                Storyboard.TargetProperty="MaxHeight"
                                                From="21"
                                                To="200" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                BeginTime="0:0:0.5"
                                                Storyboard.TargetProperty="MaxHeight"
                                                From="200"
                                                To="21"
                                                Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <!--<Setter Property="MaxHeight" Value="200" />-->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel Margin="8">
        <Grid MaxWidth="400">
            <StackPanel TextElement.FontSize="13">
                <StackPanel.Resources>
                    <Style TargetType="ContentControl">
                        <Setter Property="Margin" Value="0,3" />
                    </Style>
                </StackPanel.Resources>

                <shared:ChangeableControl
                    Margin="0,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    Binding="{Binding InstitutionName}" />




                <StackPanel>
                    <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding InstitutionCode}" />
                    <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding ArtificialPerson}" />


                    <shared:ChangeableControl Binding="{Binding RegisterCapital}" EditTemplate="{StaticResource DT.Text.Cap}" />
                    <shared:ChangeableControl Binding="{Binding RealCapital}" EditTemplate="{StaticResource DT.Text.Cap}" />


                    <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding SetupDate}">
                        <shared:ChangeableControl.EditTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding NewValue}" />
                            </DataTemplate>
                        </shared:ChangeableControl.EditTemplate>
                    </shared:ChangeableControl>


                    <shared:ChangeableControl Binding="{Binding ExpireDate}">
                        <shared:ChangeableControl.EditTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <DatePicker
                                        Width="110"
                                        SelectedDate="{Binding NewValue.Date}"
                                        Visibility="{Binding NewValue.IsLongTerm, Converter={StaticResource Boolean2VisibilityReConverter}}" />
                                    <CheckBox
                                        Margin="8,0"
                                        Content="至今"
                                        IsChecked="{Binding NewValue.IsLongTerm}" />
                                </DockPanel>
                            </DataTemplate>
                        </shared:ChangeableControl.EditTemplate>
                    </shared:ChangeableControl>


                    <shared:ChangeableControl Binding="{Binding Telephone}" EditTemplate="{StaticResource DT.Text.Cap}" />
                    <shared:ChangeableControl Binding="{Binding Fax}" EditTemplate="{StaticResource DT.Text.Cap}" />


                </StackPanel>

                <shared:ChangeableControl
                    MinWidth="300"
                    HorizontalContentAlignment="Stretch"
                    Binding="{Binding WebSite}" />


                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding RegisterAddress}" />
                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding OfficeAddress}" />
                <shared:ChangeableControl HorizontalContentAlignment="Stretch" Binding="{Binding BusinessScope}">
                    <shared:ChangeableControl.EditTemplate>
                        <DataTemplate>
                            <TextBox
                                MinHeight="100"
                                AcceptsReturn="True"
                                Text="{Binding NewValue, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </shared:ChangeableControl.EditTemplate>
                </shared:ChangeableControl>




            </StackPanel>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                <ToggleButton
                    hc:IconElement.Geometry="{StaticResource f.pencil}"
                    local:HelpService.Help="点击这里修改管理人资料和证件"
                    local:HelpService.Placement="Right"
                    BorderThickness="0"
                    DockPanel.Dock="Right"
                    IsChecked="{Binding IsReadOnly}"
                    Style="{StaticResource EditSwitch}">
                    <!--<local:HelpService.Help>
                  <DataTemplate>
                      <TextBlock Text="点击这里修改管理人资料和证件" />
                  </DataTemplate>
              </local:HelpService.Help>-->
                </ToggleButton>


            </StackPanel>
        </Grid>

        <GroupBox
            local:HelpService.Help="可以设置多个文件，保存历史证件"
            local:HelpService.Placement="Bottom"
            Background="WhiteSmoke"
            DockPanel.Dock="Top"
            Header="证件"
            Style="{StaticResource GroupBoxTab}"
            Visibility="{Binding ShowFileList, Converter={StaticResource Boolean2VisibilityConverter}}">
            <StackPanel>
                <shared:MultipleFileView Binding="{Binding BusinessLicense}" Style="{StaticResource CardFileStyle}" />
                <shared:MultipleFileView Binding="{Binding BusinessLicense2}" Style="{StaticResource CardFileStyle}" />
                <shared:MultipleFileView Binding="{Binding AccountOpeningLicense}" Style="{StaticResource CardFileStyle}" />
                <shared:MultipleFileView Binding="{Binding CharterDocument}" Style="{StaticResource CardFileStyle}" />
                <!--<shared:MultipleFileView Binding="{Binding LegalPersonIdCard}" Style="{StaticResource CardFileStyle}" />-->

            </StackPanel>
        </GroupBox>



        <!--  股权结构  -->
        <StackPanel>
            <Border>
                <DockPanel LastChildFill="False">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="18"
                        Text="股东" />


                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Foreground="Red"
                        Text="股东认缴和注册资本不一致"
                        Visibility="{Binding ShareNotPair, Converter={StaticResource Boolean2VisibilityConverter}}" />

                    <Button
                        hc:IconElement.Geometry="{StaticResource f.circle-plus}"
                        Command="{Binding AddShareHolderCommand}"
                        Foreground="Green"
                        Style="{StaticResource ButtonIcon}" />


                    <!--<Button
                   hc:IconElement.Geometry="{StaticResource f.dharmachakra}"
                   Command="{Binding OpenOwnershipCommand}"
                   Style="{StaticResource ButtonIcon}"
                   ToolTip="股权结构图" />-->
                </DockPanel>
            </Border>

            <DataGrid
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding ShareRelations}"
                Style="{StaticResource DataGrid.NoSelect}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="姓名">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <shared:CopyableTextBlock Text="{Binding Holder.Name}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding OpenEntityCommand}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </shared:CopyableTextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="认缴金额">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <shared:CopyableTextBlock HorizontalAlignment="Right" Text="{Binding Share}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn
                        Binding="{Binding Ratio, StringFormat=P2}"
                        ElementStyle="{StaticResource RightAlignText}"
                        Header="占比" />

                    <!--  编辑/删除  -->
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="False">
                                    <Button
                                        hc:IconElement.Geometry="{StaticResource f.circle-minus}"
                                        Command="{Binding DataContext.RemoveShareHolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding .}"
                                        Foreground="Red"
                                        Style="{StaticResource ButtonIcon.Small}" />


                                    <Button
                                        hc:IconElement.Geometry="{StaticResource f.pen}"
                                        Command="{Binding DataContext.EditShareHolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding .}"
                                        Style="{StaticResource ButtonIcon.Small}" />
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </DockPanel>
</Window>
