<Window
    x:Class="FMO.ExporterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="模板导出"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:ExporterWindowViewModel}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <DockPanel Margin="8">
        <ListBox
            BorderThickness="0"
            ItemsSource="{Binding Templates}"
            SelectedItem="{Binding SelectedTemplate}"
            Visibility="{Binding IsMultiTpl, Converter={StaticResource Boolean2VisibilityConverter}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="0,4">
                        <TextBlock
                            DockPanel.Dock="Bottom"
                            FontSize="8"
                            Text="{Binding Id}" />
                        <TextBlock Text="{Binding Name}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Rectangle
            Width="2"
            Margin="4,0"
            Fill="Gray"
            Visibility="{Binding IsMultiTpl, Converter={StaticResource Boolean2VisibilityConverter}}" />

        <DockPanel DockPanel.Dock="Top">

            <Button
                Margin="10,0,0,0"
                Padding="20,0"
                Command="{Binding ExportCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="导出"
                DockPanel.Dock="Right"
                Style="{StaticResource ButtonPrimary}" />

            <!--<DockPanel DockPanel.Dock="Right" Visibility="{Binding SelectedFileName, Converter={StaticResource Object2VisibilityConverter}}">
