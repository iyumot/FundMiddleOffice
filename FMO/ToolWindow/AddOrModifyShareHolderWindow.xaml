<Window
    x:Class="FMO.AddOrModifyShareHolderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    Title="股权关系"
    Width="450"
    Height="180"
    d:DataContext="{d:DesignInstance Type=local:AddOrModifyShareHolderWindowViewModel}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <Style
            x:Key="SearchBox"
            BasedOn="{StaticResource ComboBoxBaseStyle}"
            TargetType="ComboBox">
            <Setter Property="IsEditable" Value="True" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="IsDropDownOpen" Value="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource Mode=Self}, Mode=OneWay}" />
        </Style>
    </Window.Resources>

    <Border Margin="10">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                shared:MaskService.IsMask="True"
                FontSize="14"
                FontWeight="Black"
                Text="{Binding Institution.Name}" />

            <DockPanel Margin="0,10">
                <TextBlock
                    Width="80"
                    VerticalAlignment="Center"
                    Text="请选择持有人" />

                <DockPanel DockPanel.Dock="Right" Visibility="{Binding ShowAddEntity, Converter={StaticResource Boolean2VisibilityConverter}}">
                    <Button
                        hc:IconElement.Geometry="{StaticResource f.circle-user}"
                        Command="{Binding AddPersonCommand}"
                        Style="{StaticResource ButtonIcon}" />
                    <Button
                        hc:IconElement.Geometry="{StaticResource f.sitemap}"
                        Command="{Binding AddInstitutionCommand}"
                        Style="{StaticResource ButtonIcon.Small}" />
                </DockPanel>



                <ComboBox
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Candidates}"
                    SelectedItem="{Binding Holder}"
                    Style="{StaticResource SearchBox}"
                    Text="{Binding HolderName, UpdateSourceTrigger=PropertyChanged, Delay=200}" />
            </DockPanel>


            <DockPanel>
                <TextBlock
                    Width="80"
                    VerticalAlignment="Center"
                    Text="认缴金额" />
                <Button
                    Width="100"
                    Margin="10,0,0,0"
                    Command="{Binding ConfirmCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="确认"
                    DockPanel.Dock="Right"
                    Style="{StaticResource ButtonPrimary}" />
                <TextBlock
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"
                    Text="万元" />
                <hc:TextBox
                    HorizontalContentAlignment="Center"
                    hc:InfoElement.Placeholder="认缴金额"
                    Text="{Binding ShareAmount, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

            </DockPanel>
        </StackPanel>
    </Border>
</Window>
