<hc:Window
    x:Class="FMO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="基金中台"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid Background="White">

        <DockPanel>
            <hc:SideMenu Margin="0,20,0,0" AutoSelect="True">
                <hc:SideMenuItem
                    Width="120"
                    hc:IconElement.Geometry="{StaticResource G.XMark}"
                    Header="管理人">
                    <hc:SideMenuItem.Icon>
                        <Viewbox Width="16" Height="16">
                            <Path Data="{StaticResource G.Home}" Fill="Black" />
                        </Viewbox>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="基金">
                    <hc:SideMenuItem.Icon>
                        <Viewbox Width="16" Height="16">
                            <Path Data="{StaticResource G.Product}" Fill="Black" />
                        </Viewbox>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="客户">
                    <hc:SideMenuItem.Icon>
                        <Viewbox Width="16" Height="16">
                            <Path Data="{StaticResource G.User}" Fill="Black" />
                        </Viewbox>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="TA">
                    <hc:SideMenuItem.Icon>
                        <Viewbox Width="16" Height="16">
                            <Path Data="{StaticResource G.RectList}" Fill="Black" />
                        </Viewbox>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Command="{Binding OpenPageCommand}" CommandParameter="Trustee">
                    <hc:SideMenuItem.Header>
                        <hc:Badge Content="托管" Status="Dot" ShowBadge="False" Width="50"/>
                    </hc:SideMenuItem.Header>
                    <hc:SideMenuItem.Icon>
                        <Viewbox Width="16" Height="16">
                            <Path Data="{StaticResource G.Bank}" Fill="Black" />
                        </Viewbox>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
            </hc:SideMenu>

            <TabControl
                Margin="5,0"
                BorderThickness="0"
                ItemsSource="{Binding Pages}" />
        </DockPanel>

        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Right">
            <StackPanel hc:Growl.GrowlParent="True" VerticalAlignment="Top" Margin="0,10,10,10"/>
        </ScrollViewer>
    </Grid>
</hc:Window>
