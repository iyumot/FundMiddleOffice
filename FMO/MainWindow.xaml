        <ListBox
            Grid.Row="2"
            HorizontalAlignment="Center"
            BorderBrush="Transparent"
            ItemsSource="{Binding MenuItems}"
            Style="{StaticResource ListBoxCustom}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="local:MainMenu">
                    <Button
                        Margin="0,10"
                        Command="{Binding Command}"
                        CommandParameter="{Binding Parameter}"
                        Style="{StaticResource ButtonCustom}">
                        <DockPanel>
                            <TextBlock
                                Margin="0,4,0,0"
                                HorizontalAlignment="Center"
                                DockPanel.Dock="Bottom"
                                FontSize="11"
                                Foreground="Black"
                                Text="{Binding Title}" />
                            <Viewbox Width="26" Height="26">
                                <Path Data="{Binding Icon}" Fill="{Binding IconBrush}" />
                            </Viewbox>
                        </DockPanel>
                    </Button>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



        <TabControl
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5,0"
            BorderThickness="0"
            ItemContainerStyle="{StaticResource TabItem.Home}"
            ItemsSource="{Binding Pages}" />



        <ScrollViewer
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,200,0,0"
            HorizontalAlignment="Right"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel
                Margin="0,10,10,10"
                VerticalAlignment="Bottom"
                hc:Growl.GrowlParent="True" />
        </ScrollViewer>


        <hc:SimplePanel
            Grid.RowSpan="9"
            Grid.ColumnSpan="9"
            Visibility="{Binding ShowHelp, Converter={StaticResource Boolean2VisibilityConverter}}">

            <hc:SimplePanel Background="WhiteSmoke" Opacity="0.5" />

            <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <Border
                    Canvas.Left="100"
                    Canvas.Top="160"
                    Background="White">
                    <hc:UniformSpacingPanel
                        Margin="10"
                        Orientation="Vertical"
                        VerticalSpacing="10">
                        <DockPanel>
                            <Viewbox Width="20">
                                <Path Data="{StaticResource f.web-awesome}" Fill="Green" />
                            </Viewbox>
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                Text="当前持有产品" />

                            <Viewbox Width="20">
                                <Path Data="{StaticResource f.web-awesome}" Fill="DarkGray" />
                            </Viewbox>
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                Text="曾经持有产品" />
                        </DockPanel>

                        <DockPanel>
                            <Viewbox Width="20">
                                <Path Data="{StaticResource f.umbrella}" Fill="Red" />
                            </Viewbox>
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                Text="风险测评过期" />
                        </DockPanel>

                        <DockPanel>
                            <Viewbox Width="20">
                                <Path Data="{StaticResource f.triangle-exclamation}" Fill="Red" />
                            </Viewbox>
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                Text="没有合格投资者认定" />

                            <Viewbox Width="20">
                                <Path Data="{StaticResource f.triangle-exclamation}" Fill="Gray" />
                            </Viewbox>
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                Text="合格投资者认定资料不全" />
                        </DockPanel>

                        <DockPanel>
                            <Viewbox Width="20">
                                <Path Data="{StaticResource f.envelope}" Fill="Red" />
