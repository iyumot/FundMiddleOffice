<hc:Window
    x:Class="FMO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="基金中台"
    Width="800"
    Height="450"
    d:Height="900"
    d:Width="1600"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>


        <DataTemplate x:Key="CloseableTabHeader" d:DataType="local:TabItemInfo">
            <Border Margin="-8,0,-6,0">
                <DockPanel LastChildFill="False">
                    <Button
                        Width="12"
                        Margin="2,0"
                        Padding="0"
                        hc:IconElement.Geometry="{StaticResource f.xmark}"
                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.ClosePageCommand}"
                        CommandParameter="{Binding .}"
                        DockPanel.Dock="Right"
                        Foreground="{Binding HeaderBrush}"
                        Style="{StaticResource ButtonIcon.Small}" />
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Foreground="{Binding HeaderBrush}"
                        Text="{Binding Header}" />

                </DockPanel>
            </Border>
        </DataTemplate>
        <Style x:Key="TabItem.Home" TargetType="TabItem">
            <Setter Property="FrameworkElement.FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="MinHeight" Value="{StaticResource DefaultControlHeight}" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border
                            Name="border"
                            Height="30"
                            Margin="2,0"
                            VerticalAlignment="Bottom"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{Binding Path=(hc:BorderElement.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}">
                            <hc:SimplePanel>
                                <ContentPresenter
                                    Name="contentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ContentSource="Header"
                                    Focusable="False"
                                    RecognizesAccessKey="True"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                <!--<Path
                                    x:Name="sel"
                                    Data="M0,0 L15,0 L0,15 Z"
                                    Fill="Transparent"
                                    StrokeThickness="1" />-->
                            </hc:SimplePanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="UIElement.IsMouseOver" Value="True">
                                <Setter Property="UIElement.Opacity" Value=".9" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="contentPresenter" Property="UIElement.Opacity" Value="0.4" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <!--<Setter TargetName="sel" Property="Fill" Value="Black" />-->
                                <Setter TargetName="border" Property="Height" Value="34" />
                                <Setter Property="TextElement.FontWeight" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{Binding Background, TargetNullValue=WhiteSmoke}" />
            <Setter Property="IsSelected" Value="{Binding IsSelected}" />
            <Setter Property="Content" Value="{Binding Content}" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock
                                MinWidth="50"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Text="{Binding Header}"
                                TextAlignment="Center" />
                        </DockPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCloseable}" Value="True">
                    <Setter Property="HeaderTemplate" Value="{StaticResource CloseableTabHeader}" />
                </DataTrigger>
                <!--<Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderBrush" Value="Orange" />
                    <Setter Property="BorderThickness" Value="6,0" />
                </Trigger>-->
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="44" />
            <RowDefinition Height="34" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image Grid.RowSpan="2" Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}" />

        <DockPanel
            Grid.Column="1"
            Background="Transparent"
            MouseMove="DockPanel_MouseMove">
            <Button
                Margin="0,0,10,0"
                hc:IconElement.Geometry="{StaticResource CloseGeometry}"
                Command="{Binding CloseWindowCommand}"
                DockPanel.Dock="Right"
                Style="{StaticResource ButtonIcon.Small}" />

            <TextBlock
                VerticalAlignment="Center"
                FontWeight="Black"
                Text="{Binding Title}" />
        </DockPanel>

        <hc:SideMenu
            Grid.Row="2"
            Margin="0,20,0,0"
            AutoSelect="True">
            <hc:SideMenuItem
                Width="120"
                Command="{Binding OpenPageCommand}"
                CommandParameter="ManagerPage"
                Header="管理人">
                <hc:SideMenuItem.Icon>
                    <Viewbox Width="16" Height="16">
                        <Path Data="{StaticResource G.Home}" Fill="BlueViolet" />
                    </Viewbox>
                </hc:SideMenuItem.Icon>
            </hc:SideMenuItem>
            <hc:SideMenuItem
                Command="{Binding OpenPageCommand}"
                CommandParameter="FundsPage"
                Header="基金">
                <hc:SideMenuItem.Icon>
                    <Viewbox Width="16" Height="16">
                        <Path Data="{StaticResource f.fire}" Fill="Violet" />
                    </Viewbox>
                </hc:SideMenuItem.Icon>
            </hc:SideMenuItem>
            <hc:SideMenuItem
                Command="{Binding OpenPageCommand}"
                CommandParameter="Customer"
                Header="客户">
                <hc:SideMenuItem.Icon>
                    <Viewbox Width="16" Height="16">
                        <Path Data="{StaticResource G.User}" Fill="#49bc69" />
                    </Viewbox>
                </hc:SideMenuItem.Icon>
            </hc:SideMenuItem>
            <hc:SideMenuItem
                Command="{Binding OpenPageCommand}"
                CommandParameter="TA"
                Header="TA">
                <hc:SideMenuItem.Icon>
                    <Viewbox Width="16" Height="16">
                        <Path Data="{StaticResource f.table}" Fill="Orange" />
                    </Viewbox>
                </hc:SideMenuItem.Icon>

            </hc:SideMenuItem>
            <hc:SideMenuItem Command="{Binding OpenPageCommand}" CommandParameter="Trustee">
                <hc:SideMenuItem.Header>
                    <hc:Badge
                        Width="50"
                        Content="平台"
                        ShowBadge="False"
                        Status="Dot" />
                </hc:SideMenuItem.Header>
                <hc:SideMenuItem.Icon>
                    <Viewbox Width="16" Height="16">
                        <Path Data="{StaticResource f.tree}" Fill="MediumSpringGreen" />
                    </Viewbox>
                </hc:SideMenuItem.Icon>
            </hc:SideMenuItem>

            <hc:SideMenuItem Command="{Binding OpenPageCommand}" CommandParameter="Task">
                <hc:SideMenuItem.Header>
                    <hc:Badge
                        Width="50"
                        Content="任务"
                        ShowBadge="False"
                        Status="Dot" />
                </hc:SideMenuItem.Header>
                <hc:SideMenuItem.Icon>
                    <Viewbox Width="16" Height="16">
                        <Path Data="{StaticResource f.brain}" Fill="DarkOrchid" />
                    </Viewbox>
                </hc:SideMenuItem.Icon>
            </hc:SideMenuItem>

            <hc:SideMenuItem Command="{Binding OpenPageCommand}" CommandParameter="Statement">
                <hc:SideMenuItem.Header>
                    <hc:Badge
                        Width="50"
                        Content="报表"
                        ShowBadge="False"
                        Status="Dot" />
                </hc:SideMenuItem.Header>
                <hc:SideMenuItem.Icon>
                    <Viewbox Width="16" Height="16">
                        <Path Data="{StaticResource f.square-poll-vertical}" Fill="RoyalBlue" />
                    </Viewbox>
                </hc:SideMenuItem.Icon>
            </hc:SideMenuItem>
        </hc:SideMenu>

        <TabControl
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5,0"
            BorderThickness="0"
            ItemContainerStyle="{StaticResource TabItem.Home}"
            ItemsSource="{Binding Pages}" />



        <ScrollViewer
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,200,0,0"
            HorizontalAlignment="Right"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel
                Margin="0,10,10,10"
                VerticalAlignment="Bottom"
                hc:Growl.GrowlParent="True" />
        </ScrollViewer>
    </Grid>
</hc:Window>
