<UserControl
    x:Class="FMO.Schedule.SendDailyReportToWebhookView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO.Schedule"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:FMO.Shared;assembly=FMO.Shared"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:DateTimeToTimeOnlyConverter x:Key="DateTimeToTimeOnlyConverter" />
    </UserControl.Resources>
    <DockPanel DockPanel.Dock="Top">

        <DockPanel>
            <DockPanel
                Margin="0,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom">
                <TextBlock
                    HorizontalAlignment="Center"
                    DockPanel.Dock="Top"
                    Text="发送时间" />
                <hc:TimePicker Width="90" SelectedTime="{Binding Time, Converter={StaticResource DateTimeToTimeOnlyConverter}}" />
            </DockPanel>
            <Border Background="Lavender">
                <TextBlock VerticalAlignment="Center" Text="WebHook地址" />
            </Border>
        </DockPanel>


        <ListBox
            Background="Lavender"
            ItemsSource="{Binding WebHooks}"
            Style="{StaticResource ListBoxCustom}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <CheckBox IsChecked="{Binding IsEnabled}" />
                        <TextBox
                            MinWidth="600"
                            shared:MaskService.IsMask="True"
                            Text="{Binding Url, UpdateSourceTrigger=PropertyChanged, Delay=400}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
