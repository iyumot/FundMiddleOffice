<UserControl
    x:Class="FMO.Schedule.TAFromMailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FMO.Schedule"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource TextBlockDefault}" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>
    <DockPanel
        Margin="8,0"
        VerticalAlignment="Center"
        DockPanel.Dock="Top"
        IsEnabled="{Binding IsWorking, Converter={StaticResource Boolean2VisibilityReConverter}}"
        LastChildFill="False">
        <hc:TextBox
            Width="200"
            hc:InfoElement.Placeholder="邮箱 user@mail.com"
            Text="{Binding Mail, UpdateSourceTrigger=PropertyChanged, Delay=300}"
            TextAlignment="Center" />

        <TextBlock Margin="10,0,0,0" Text="运行时间间隔" />
        <hc:NumericUpDown Margin="4,0" Value="{Binding Interval}" />
        <TextBlock Text="分" />

        <Button
            Margin="10,0"
            Command="{Binding RebuildDataCommand}"
            Content="重建"
            IsEnabled="{Binding IsAccountVerified}" />
    </DockPanel>
</UserControl>
